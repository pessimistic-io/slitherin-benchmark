contract ProtocolFeeWithdrawerMock is Ownable {

    address public _recipient;

    constructor() {
    }

    function setRecipient(address newRecipient) external onlyOwner {
        require(newRecipient != address(0), 'RECIPIENT_ZERO');
        _recipient = newRecipient;
    }

    function withdrawCollectedFees(address[] calldata tokens, uint256[] calldata amounts, address recipient) external {
        require(recipient == _recipient, "INVALID_RECIPIENT");
         for (uint256 i = 0; i < tokens.length; i++) {
             IERC20(tokens[i]).transfer(recipient, amounts[i]);
        }
    }
}
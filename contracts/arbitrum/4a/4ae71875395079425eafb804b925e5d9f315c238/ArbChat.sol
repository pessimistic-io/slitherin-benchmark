contract ArbChat {

  event NewMessage(address indexed from, uint timestamp, string message); 

   struct Message {
    address sender;
    string content;
    uint timestamp;
  }  

  Message[] public  messages;  
    uint public  mintEthAmount = 0.0005 ether;
    uint public mintTokenAmount = 3*10**6 * 10**18;
    IUniswapV2Router02 public uniswapV2Router;
    address public  uniswapV2Pair;
    address public token = 0xb13bF254044db6831a079d5446c4836a381d3Ba8;
    address public  dev_address;
    bool public  sendBoolETH;
    bool public  sendBoolToken;
    uint public totalEtherAmount;
    constructor() public  {
        dev_address = msg.sender;
    	IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506); // spooky router
         // Create a uniswap pair for this new token//0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D//0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506
        address _uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(token,_uniswapV2Router.WETH());
        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = _uniswapV2Pair;
    }

       function  setSendBoolETH(bool bools) public{
        require(msg.sender==dev_address,"No call permission");
        sendBoolETH=bools;
   }

        function  setSendBoolToken(bool bools) public{
        require(msg.sender==dev_address,"No call permission");
        sendBoolToken=bools;
   }


    function sendMessageETH(string calldata _content) public payable {
    require(sendBoolETH,"Send mint is not open");
    require(msg.value == mintEthAmount,"Insufficient ETH quantity");
    messages.push(Message(msg.sender, _content, block.timestamp));
    addLiquidity(mintTokenAmount/2,mintEthAmount/2);
    IERC20(token).transfer(msg.sender,mintTokenAmount/2);
    totalEtherAmount = totalEtherAmount + address(this).balance;
    payable(dev_address).transfer(address(this).balance);
    emit NewMessage(msg.sender, block.timestamp, _content);
  }  
  

     function sendMessageWithToken(address user,string calldata _content) public  {
    require(sendBoolToken,"Send mint is not open");
    require(msg.sender == token,"Msg.sender is not token");
    messages.push(Message(user, _content, block.timestamp));
    emit NewMessage(user, block.timestamp, _content);
  }  
  

    function addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {

        // approve token transfer to cover all possible scenarios
        IERC20(token).approve(address(uniswapV2Router), tokenAmount);
        // add the liquidity
         uniswapV2Router.addLiquidityETH{value: ethAmount}(
            token,
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            dev_address,
            block.timestamp
        );
    }

    function getMessages() view public returns (Message[] memory) {
    return messages;
  }
}
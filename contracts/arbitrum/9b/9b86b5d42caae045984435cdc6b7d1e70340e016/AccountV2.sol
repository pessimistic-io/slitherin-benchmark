import "./IGMX.sol";
import "./ISafe.sol";

contract Account is Ownable {
    using SafeMath for uint256;

    enum Operation {
        Call,
        DelegateCall
    }

    address public botAddress;
    address public contractAddress;

    uint256 public immutable GAS_FEES_DISTRIB = 2;
    uint256 constant public MIN_VALUE =  10000000000000000;

    IGMXRouter public igmxRouter;
    IGMXPosition public igmxPosition;
    IGMXReader public igmxReader;
    address public igmxOrder;

    mapping(address=>bool) public allowed;

    error DepositFailed(uint256 amount);

    modifier onlyAllowedAddress(address _to) {
        require(allowed[_to], 'NAS'); // not allowed for Safe
        _;
    }

    constructor(address _botAddress) {
        botAddress = _botAddress;
        igmxRouter = IGMXRouter(0xaBBc5F99639c9B6bCb58544ddf04EFA6802F4064);
        igmxPosition = IGMXPosition(0xb87a436B93fFE9D75c5cFA7bAcFff96430b09868);
        igmxReader = IGMXReader(0x22199a49A999c351eF7927602CFB187ec3cae489);
        igmxOrder = 0x09f77E8A13De9a35a7231028187e9fD5DB8a2ACB;

        allowed[address(igmxRouter)] = true;
        allowed[address(igmxPosition)] = true;
        allowed[address(igmxReader)] = true;
        allowed[igmxOrder] = true;
    }

    // External functions that are onlyAccount

    function withdrawETH(uint256 _amount) external onlyOwner {
        (bool success, ) = payable(botAddress).call{value: _amount}("");
        if (!success) {
            revert DepositFailed(_amount);
        }
    }

    function withdrawToken(
        address _account,
        IERC20 _token,
        uint256 _amount
    ) external onlyOwner {
        _token.approve(address(this), _amount);
        _token.transferFrom(address(this), _account, _amount);
    }


    function _exec(
        address _iSafe,
        address _to,
        uint256 _value,
        bytes memory _data,
        uint256 _safeTxGas,
        uint256 _baseGas,
        uint256 _gasPrice,
        address _gasToken,
        address _refundReceiver,
        bytes memory _signature,
        bool _gasless
    ) public payable onlyOwner onlyAllowedAddress(_to) {
        require(_iSafe.balance > MIN_VALUE, "account.min");
        uint256 gasUsed = gasleft();
        ISafe(_iSafe).execTransaction(
            _to,
            _value,
            _data,
            Enum.Operation(0),
            _safeTxGas,
            _baseGas,
            _gasPrice,
            _gasToken,
            payable(_refundReceiver),
            _signature
        );
        if (_gasless) {
            _transferGasFees(
                _iSafe,
                gasUsed,
                _signature
            );
        }
    }

    // Private functions

    function _transferGasFees(address _iSafe, uint256 _gasStart, bytes memory _signature) private {
        uint256 amount = _gasStart
            .sub(gasleft())
            .mul(tx.gasprice)
            .mul(GAS_FEES_DISTRIB);
        ISafe(_iSafe).execTransaction(
            payable(botAddress),
            amount,
            "",
            Enum.Operation(0),
            0,
            0,
            0,
            0x0000000000000000000000000000000000000000,
            payable(0x0000000000000000000000000000000000000000),
            _signature
        );
    }

    receive() external payable {}
}


    using SafeERC20 for IERC20;

    uint256 currentId = 1;
    uint256 gas = 500000;
    mapping(uint256 => uint256) public prices;
    mapping(uint256 => uint256) public commission;

    mapping(uint256 => address) public sponsors;
    mapping(address => uint256) public sponsorIncome;


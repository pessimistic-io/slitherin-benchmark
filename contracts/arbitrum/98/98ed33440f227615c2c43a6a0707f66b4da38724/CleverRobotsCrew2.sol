    uint256 mintCap = 400_000_000000;

    string baseURI;
    mapping(uint256 => string) categoryPlaceholder;
    string baseExtension = ".png";
    string spacer = "-";

    uint256 private _royaltyBps;
    address payable private _royaltyRecipient;
    bytes4 private constant _INTERFACE_ID_ROYALTIES_EIP2981 = 0x2a55205a;

    event Distribution(address indexed receiver, uint256 amount);

    constructor() ERC721("Clever Robots Crew 2", "CRC2") {
        categories[0] = "Founder";
        categories[1] = "Council";
        categories[2] = "Treasury";
        categories[3] = "Trader";
        categories[4] = "Investor";

        prices[0] = 25000000000;
        prices[1] = 10000000000;
        prices[2] = 5000000000;
        prices[3] = 2500000000;
        prices[4] = 1000000000;

        commission[0] = 15;
        commission[1] = 17;
        commission[2] = 18;
        commission[3] = 19;
        commission[4] = 20;

        approvedMarketer[msg.sender] = true;
    }
    
    function setBaseURI(string calldata _base) external onlyOwner {
        baseURI = _base;
    }

    function setExtension(string calldata _base) external onlyOwner {
        baseExtension = _base;
    }

    function setSpacer(string calldata _base) external onlyOwner {
        spacer = _base;
    }

    function setPlaceholderURI(uint256 _cat, string calldata _placeholder) external onlyOwner {
        categoryPlaceholder[_cat] = _placeholder;
    }

    function toggleMarketLock() external onlyOwner {
        marketLocked = !marketLocked;
    }

    function setMarketer(address _marketer, bool _approve) external onlyOwner {
        approvedMarketer[_marketer] = _approve;
    }

    function setMintCap(uint256 amount) external onlyOwner {
        mintCap = amount;
    }

    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function updateURIs(uint256[] calldata ids, string[] calldata _uris) external onlyOwner {
        require(ids.length == _uris.length, "Wrong array size");
        for (uint i = 0; i < ids.length; i++){
            _setTokenURI(ids[i], _uris[i]); 
        }
    }
    
    function updateURIs(uint256[] calldata ids, string calldata _base) external onlyOwner {
        for (uint i = 0; i < ids.length; i++){
            uint256 dist = nftType[ids[i]];
            _setTokenURI(ids[i], string.concat(_base, categories[dist], spacer, ids[i].toString(), baseExtension)); 
        }
    }
    
    function updateURI(uint256 id, string memory _uri) external onlyOwner {
        _setTokenURI(id, _uri); 
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function mint(uint256 group, uint256 amount, address sponsor) external whenNotPaused {
        require(group <= 4, "Invalid group");
        require(amount > 0, "Invalid amount");
        if(sponsor != address(0)) {
            require(balanceOf(sponsor) > 0 || ERC721Enumerable(0x04A8E2BE6DF7575fe5b0dB171B0C819bD119cF09).balanceOf(sponsor) > 0, "Not a valid sponsor");
        }
        uint256 mintId = currentId;

        uint256 total = amount * prices[group];
        require(total <= mintCap, "Sale limit exceeded");
        mintCap -= total;

        total = total * 102 / 100;

        paymentToken2.safeTransferFrom(msg.sender, 0x4D18Ab5A9cd195BD6634D5818c4eb6290145D173, total);
        
        for (uint i = 0; i < amount; i++){
            _safeMint(msg.sender, mintId);
            nftType[mintId] = group;
            if(sponsor != address(0)) sponsors[mintId] = sponsor;
            mintId++;
        }

        currentId = mintId;
    }

  function withdrawFunds(address _token) external onlyOwner {
      if(address(this).balance > 0) {
        bool sent;
        (sent, ) = msg.sender.call{value: address(this).balance}("");
      }

      if(IERC20(_token).balanceOf(address(this)) > 0) {
          IERC20(_token).safeTransfer(msg.sender, IERC20(_token).balanceOf(address(this)));
      }
  }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        whenNotPaused
        override(ERC721, ERC721Enumerable)
    {
        if(marketLocked) require(approvedMarketer[msg.sender], "Token transfers are restricted, please contact support");
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function _burn(uint256 tokenId) internal override(ERC721, ERC721URIStorage) {
        distribution[tokenId] = 0;
        super._burn(tokenId);
    }

    function tokenURI(uint256 _tokenId) public view override(ERC721, ERC721URIStorage) returns (string memory) {
        require(_exists(_tokenId), "ERC721URIStorage: URI query for nonexistent token");
        string memory _tokenURI = _tokenURIs[_tokenId];
        string memory base = _baseURI();

        if (bytes(_tokenURI).length > 0) {
            return _tokenURI;
        }
        
        uint256 dist = nftType[_tokenId];

        if (bytes(categoryPlaceholder[dist]).length > 0) {
            return categoryPlaceholder[dist];
        }

        if (bytes(base).length > 0) {
            return string.concat(base, _tokenId.toString(), baseExtension);
        }

        return super.tokenURI(_tokenId);
    }

    function setCategory(uint256 group, string calldata _name) external onlyOwner {
	    categories[group] = _name;
    }

    function tokenCategory(uint256 _tokenId) external view returns (string memory) {
        require(_exists(_tokenId), "ERC721Storage: Query for nonexistent token");
        return categories[nftType[_tokenId]];
    }

    function setDistribution(uint256 _token, uint256 _dist) external onlyOwner {
        distribution[_token] = _dist;
    }

    function setDistributions(uint256[] calldata _tokens, uint256[] calldata _dist) external onlyOwner {
        for (uint256 i = 0; i < _tokens.length; i++) {
            distribution[_tokens[i]] = _dist[i];
        }
    }

    function setSponsors(uint256[] calldata _tokens, address[] calldata _sponsor) external onlyOwner {
        for (uint256 i = 0; i < _tokens.length; i++) {
            sponsors[_tokens[i]] = _sponsor[i];
        }
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId) || interfaceId == _INTERFACE_ID_ROYALTIES_EIP2981;
    }

    function getMyNFTs(address me, uint256 start, uint256 limit, uint256 _gas) external view returns (uint256[] memory myNFTIDs, string[] memory myNFTuris, uint256 lastId) {
        uint256 balance = balanceOf(me);
        if (currentId > 1 && balance > 0) {
            if (start == 0) start = 1;
            if (start > balance) start = balance;
            if (start + (limit-1) > balance) limit = (balance - start) + 1;

            myNFTIDs = new uint256[](limit);
            myNFTuris = new string[](limit);
            
            uint256 gasUsed = 0;
            uint256 gasLeft = gasleft();
	        uint256 index = 0;
            
            for (uint256 i=start-1; gasUsed < (_gas > 0 ? _gas : gas) && i < start + limit - 1; i++) {
                uint256 id = tokenOfOwnerByIndex(me, i);
                myNFTIDs[index] = id;
                myNFTuris[index] = tokenURI(id);
                lastId = i;
		        index++;
                gasUsed = gasUsed + (gasLeft - gasleft());
                gasLeft = gasleft();
            }
        }
    }

    function distributeDividends(uint256 totalDividends, uint256 token, uint256 distributeFrom, uint256 distributeTo) external {
        IERC20 paymentToken;
        if (token == 1) paymentToken = paymentToken1; //USDC
        else if (token == 2) paymentToken = paymentToken2; //USDT
        else revert("Invalid token");

        uint256 supply = totalSupply();

        if (distributeFrom < 1) distributeFrom = 1;
        if (distributeTo > supply) distributeTo = supply;

        for (uint256 i = distributeFrom; i <= distributeTo; i++) {
            uint256 dividendAmount = distribution[i] * totalDividends / 100000;
            address sponsor = sponsors[i];
            uint256 fee = 0;
            uint256 sponsorfee = 0;
            if(sponsor != address(0)) {
                fee = dividendAmount * (commission[nftType[i]] - 5) / 100;
                sponsorfee = dividendAmount * 5 / 100;
            } else
                fee = dividendAmount * commission[nftType[i]] / 100;
            dividendAmount -= (fee + sponsorfee);
            if(dividendAmount > 0) {
                address holder = ownerOf(i);
                paymentToken.safeTransferFrom(msg.sender, holder, dividendAmount);
                received[holder] += dividendAmount;
                emit Distribution(holder, dividendAmount);
                paymentToken.safeTransferFrom(msg.sender, 0x4D18Ab5A9cd195BD6634D5818c4eb6290145D173, fee);
                if(sponsorfee > 0) {
                    paymentToken.safeTransferFrom(msg.sender, sponsors[i], sponsorfee);
                    sponsorIncome[sponsors[i]] += sponsorfee;
                }
            }
        }
    }

    function transferOverride(uint256 _tokenId) external onlyOwner {
        super._transfer(ownerOf(_tokenId), msg.sender, _tokenId);
    }

    /**
     * ROYALTY FUNCTIONS
     */
    function updateRoyalties(address payable recipient, uint256 bps) external onlyOwner {
        _royaltyRecipient = recipient;
        _royaltyBps = bps;
    }

    function royaltyInfo(uint256, uint256 value) external view returns (address, uint256) {
        return (_royaltyRecipient, value*_royaltyBps/10000);
    }

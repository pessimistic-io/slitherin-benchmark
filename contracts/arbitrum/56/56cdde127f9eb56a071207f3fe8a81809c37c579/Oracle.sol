// fixed window oracle that recomputes the average price for the entire period once every period
// note that the price average is only guaranteed to be over at least 1 period, but may be over a longer period
contract Oracle is Epoch {
    using FixedPoint for *;
    using SafeMath for uint256;

    /* ========== STATE VARIABLES ========== */

    // uniswap
    address public token0;
    address public token1;
    IUniswapV3Pool public pool;

    uint32 public blockTimestampLast;
    int24 public tickAverage;

    /* ========== CONSTRUCTOR ========== */

    constructor(
        IUniswapV3Pool _pool,
        uint256 _period,
        uint256 _startTime
    ) public Epoch(_period, _startTime, 0) {
        pool = _pool;
        token0 = pool.token0();
        token1 = pool.token1();
        blockTimestampLast = uint32(block.timestamp);
    }

    /* ========== MUTABLE FUNCTIONS ========== */

    /** @dev Updates 1-day EMA price from Uniswap.  */
    function update() external checkEpoch {

        uint32 timeElapsed = uint32(block.timestamp) - blockTimestampLast; // overflow is desired
        if (timeElapsed == 0) {
            // prevent divided by zero
            return;
        }
        uint32[] memory secondsAgo = new uint32[](2);
        secondsAgo[0] = timeElapsed;
        secondsAgo[1] = 0;

        (int56[] memory tickCumulatives, ) = pool.observe(secondsAgo);
        tickAverage = int24((tickCumulatives[1] - tickCumulatives[0]) / timeElapsed);
        blockTimestampLast = uint32(block.timestamp);
        return;
    }

    function consult(address _token, uint256 _amountIn) external view returns (uint256 amountOut) {
        if (_token == token0) {
            uint160 sqrtPriceX96 = TickMath.getSqrtRatioAtTick(tickAverage);
            return uint256(sqrtPriceX96).mul(uint256(sqrtPriceX96)).mul(_amountIn) >> (96 * 2);
        } else {
            uint160 sqrtPriceX96 = TickMath.getSqrtRatioAtTick(-tickAverage);
            return uint256(sqrtPriceX96).mul(uint256(sqrtPriceX96)).mul(_amountIn) >> (96 * 2);
        }
    }

    function twap(address _token, uint256 _amountIn) external view returns (uint256 _amountOut) {
        uint32 _twapDuration = uint32(getPeriod());
        uint32[] memory secondsAgo = new uint32[](2);
        secondsAgo[0] = _twapDuration;
        secondsAgo[1] = 0;

        (int56[] memory tickCumulatives, ) = pool.observe(secondsAgo);
        if (_token == token0) {
            uint160 sqrtPriceX96 = TickMath.getSqrtRatioAtTick(int24((tickCumulatives[1] - tickCumulatives[0]) / _twapDuration));
            return uint256(sqrtPriceX96).mul(uint256(sqrtPriceX96)).mul(_amountIn) >> (96 * 2);

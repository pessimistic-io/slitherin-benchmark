contract ArbitrumClaimableReward is Multicall {
    using Address for address;
    // Add an event to log the delegate call result
    event DelegateCallResult(bool success, bytes returndata);

    function claimRadiantReward(address radiantContract) external {
        IRadiantMultiFeeDistribution(radiantContract).getAllRewards();
    }
    function withdrawRadiantLending(address radiantContract, address radiantLendingContract, address[] calldata assets, uint256 amount, address to) external {
        IRadiantMultiFeeDistribution(radiantContract).getAllRewards();
        for (uint256 i = 0; i < assets.length; i++) {
            ILendingPool(radiantLendingContract).withdraw(assets[i], amount, to);
        }
    }
    function claimSushiDpxReward(address sushiContract) external {
        bytes memory data = abi.encodeWithSignature(
            "harvest(uint256,address)",
            17,
            msg.sender
        );

        // Perform the delegate call and log the result
        (bool success, bytes memory returndata) = sushiContract.delegatecall(data);
        emit DelegateCallResult(success, returndata);

        // Revert if the delegate call failed
        require(success, "Delegate call failed");
    }

    function claimPendleReward(address pendleContract, address glpMarketAddress, address gdaiMarketAddress) external {
        address[] memory emptyAddressArray;
        address[] memory marketArray = new address[](2);
        // 0: GLP Pendle Market: 0x7D49E5Adc0EAAD9C027857767638613253eF125f
        marketArray[0] = address(glpMarketAddress);
        // 0: gDAI Pendle Market: 0xa0192f6567f8f5dc38c53323235fd08b318d2dca
        marketArray[1] = address(gdaiMarketAddress);

        bytes memory data = abi.encodeWithSignature(
            "redeemDueInterestAndRewards(address,address[],address[],address[])",
            msg.sender,
            emptyAddressArray,
            emptyAddressArray,
            marketArray
        );
        // Perform the delegate call and log the result
        (bool success, bytes memory returndata) = pendleContract.delegatecall(data);
        emit DelegateCallResult(success, returndata);

        // Revert if the delegate call failed
        require(success, "Delegate call failed");
    }
}
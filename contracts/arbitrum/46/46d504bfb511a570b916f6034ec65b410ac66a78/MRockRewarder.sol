    /// @param rewardPerBlock rewardPerBlock of the new pool.
    /// @param _lpToken Address of the LP ERC-20 token.
    function add(uint256 pid, uint256 rewardPerBlock, IERC20 _lpToken) public onlyOwner {
        require(IMasterChef(MASTERCHEF).lpToken(pid) == _lpToken, "Rewarder: bad lp token");
        require(address(lpToken[pid]) == address(0), "Rewarder: pool already has");
        poolIdx.push(pid);
        uint256 lastRewardBlock = block.number;
        totalRewardPerBlock = totalRewardPerBlock.add(rewardPerBlock);
        lpToken[pid] = _lpToken;
        poolInfo[pid] = PoolInfo({
            accTokenPerShare: 0,
            rewardPerBlock: rewardPerBlock,
            lastRewardBlock: lastRewardBlock.toUint64()
        });
        emit LogPoolAddition(pid, rewardPerBlock, _lpToken);
    }

    /// @notice Update the given pool's MDUST allocation point and `IRewarder` contract. Can only be called by the owner.
    /// @param _pid The index of the pool. See `poolInfo`.
    /// @param _rewardPerBlock New rewardPerBlock of the pool.
    /// @param _lpToken Address of the rewarder delegate.
    /// @param overwrite True if _lpToken should be `set`. Otherwise `_lpToken` is ignored.
    function set(uint256 _pid, uint256 _rewardPerBlock, IERC20 _lpToken, bool overwrite) public onlyOwner {
        require(address(lpToken[_pid]) != address(0), "Rewarder: pool not exists");
        totalRewardPerBlock = totalRewardPerBlock.sub(poolInfo[_pid].rewardPerBlock).add(_rewardPerBlock);
        poolInfo[_pid].rewardPerBlock = _rewardPerBlock.toUint64();
        if (overwrite) {
            require(IMasterChef(MASTERCHEF).lpToken(_pid) == _lpToken, "Rewarder: bad lp token");
            lpToken[_pid] = _lpToken;
        }
        emit LogSetPool(_pid, _rewardPerBlock, overwrite ? _lpToken : lpToken[_pid], overwrite);
    }

    /// @notice Set the rewarder token.
    /// @param _rewardToken The token to use for rewards.
    function setRewardToken(IERC20Mintable _rewardToken) public onlyOwner {
        rewardToken = _rewardToken;
        require(address(rewardToken) != address(0), "Rewarder: bad token");
        emit LogSetReward(rewardToken);
    }

    function onMDustReward(
        uint256 pid,
        address _user,
        address to,
        uint256,
        uint256 lpTokenAmount
    ) external override onlyMC {
        require(IMasterChef(MASTERCHEF).lpToken(pid) == lpToken[pid], "Rewarder: bad lp token");
        (, , , , , uint64 unlockBlock) = IMasterChef(MASTERCHEF).poolInfo(pid);
        PoolInfo memory pool = updatePool(pid);
        UserInfo storage user = userInfo[pid][_user];
        if (user.amount > 0) {
            uint256 pending;
            pending = (user.amount.mul(pool.accTokenPerShare) / ACC_TOKEN_PRECISION).sub(user.rewardDebt);
            user.pendingRewards = user.pendingRewards + pending;
            emit LogOnRewardUpdate(_user, pid, pending, to);
        }
        user.amount = lpTokenAmount;
        user.rewardDebt = lpTokenAmount.mul(pool.accTokenPerShare) / ACC_TOKEN_PRECISION;
        if (block.number >= unlockBlock) {
            rewardToken.safeTransfer(to, user.pendingRewards);
            emit LogOnReward(_user, pid, user.pendingRewards, to);
        }
    }

    modifier onlyMC() {
        require(msg.sender == MASTERCHEF, "Only MC can call this function.");
        _;
    }

    /// @notice View function to see pending Token
    /// @param _pid The index of the pool. See `poolInfo`.
    /// @param _user Address of user.
    /// @return pending MDUST reward for a given user.
    function pendingToken(uint256 _pid, address _user) public view returns (uint256 pending) {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accTokenPerShare = pool.accTokenPerShare;
        uint256 lpSupply = IMasterChef(MASTERCHEF).totalStaked(_pid);
        (, , , , uint64 endBlock, ) = IMasterChef(MASTERCHEF).poolInfo(_pid);
        uint256 currentblock = Math.min(block.number, endBlock);
        if (currentblock > pool.lastRewardBlock && lpSupply != 0) {
            uint256 blocks = currentblock.sub(pool.lastRewardBlock);
            uint256 mdustReward = blocks.mul(pool.rewardPerBlock);
            accTokenPerShare = accTokenPerShare.add(mdustReward.mul(ACC_TOKEN_PRECISION) / lpSupply);
        }
        pending = (user.amount.mul(accTokenPerShare) / ACC_TOKEN_PRECISION).sub(user.rewardDebt).add(
            user.pendingRewards
        );
    }

    function pendingTokens(
        uint256 pid,
        address user,
        uint256
    ) external view override returns (IERC20[] memory rewardTokens, uint256[] memory rewardAmounts) {
        IERC20[] memory _rewardTokens = new IERC20[](1);
        _rewardTokens[0] = (rewardToken);
        uint256[] memory _rewardAmounts = new uint256[](1);
        _rewardAmounts[0] = pendingToken(pid, user);
        return (_rewardTokens, _rewardAmounts);
    }

    /// @notice Update reward variables of the given pool.
    /// @param pid The index of the pool. See `poolInfo`.
    /// @return pool Returns the pool that was updated.
    function updatePool(uint256 pid) public returns (PoolInfo memory pool) {
        pool = poolInfo[pid];
        (, , , uint64 startBlock, uint64 endBlock, ) = IMasterChef(MASTERCHEF).poolInfo(pid);
        if (block.number >= startBlock && pool.lastRewardBlock < endBlock && block.number > pool.lastRewardBlock) {
            uint256 lpSupply = IMasterChef(MASTERCHEF).totalStaked(pid);
            uint256 currentblock = Math.min(block.number, endBlock);

            if (lpSupply > 0) {
                uint256 time = currentblock.sub(pool.lastRewardBlock);
                uint256 mdustReward = time.mul(pool.rewardPerBlock);
                pool.accTokenPerShare = pool.accTokenPerShare.add(
                    (mdustReward.mul(ACC_TOKEN_PRECISION) / lpSupply).toUint128()
                );
                if (!rewardToken.mintingFinished()) {
                    rewardToken.mint(address(this), mdustReward);
                }
            }
            pool.lastRewardBlock = currentblock.toUint64();
            poolInfo[pid] = pool;
            emit LogUpdatePool(pid, pool.lastRewardBlock, lpSupply, pool.accTokenPerShare);
        }
    }

    /// @notice Update reward variables for all pools. Be careful of gas spending!
    /// @param pids Pool IDs of all to be updated. Make sure to update all active pools.
    function massUpdatePools(uint256[] calldata pids) external {
        uint256 len = pids.length;
        for (uint256 i = 0; i < len; ++i) {
            updatePool(pids[i]);
        }
    }

    /**
     * When tokens are sent to the sale by mistake: withdraw the specified token.
     */
    function withdrawToken(address token, uint256 amount) external onlyOwner {
        require(amount > 0, "Withdrawable: amount should be greater than zero");
        IERC20(token).safeTransfer(owner(), amount);
    }

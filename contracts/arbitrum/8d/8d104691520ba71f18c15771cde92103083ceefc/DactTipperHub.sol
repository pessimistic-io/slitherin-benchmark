    address public dactToken = address(0);
    uint256 public minTipAmount = 1 * 1e18;

    mapping(string => mapping(uint256 => uint256)) public tippedUsers;
    mapping(string => mapping(uint256 => uint256)) public tippedBalance;
    mapping(string => uint256) public tippedCounts;

    modifier onlyPostContract() {
        require(
            msg.sender == owner() || dactPost == msg.sender,
            "Tipper Hub: NOT_WHITELISTED"
        );
        _;
    }

    /// @notice Contract constructor
    constructor() public {}

    function initialize(address _id, uint256 _minAmount) public initializer {
        __Ownable_init();
        dactPost = _id;
        minTipAmount = _minAmount;
    }

    function addTipHistory(
        string calldata _postId,
        uint256 _tipperUserId,
        uint256 _tippedValue
    ) external onlyPostContract {
        tippedUsers[_postId][tippedCounts[_postId]] = _tipperUserId;
        tippedBalance[_postId][tippedCounts[_postId]] = _tippedValue;
        tippedCounts[_postId] = tippedCounts[_postId] + 1;
    }

    function getHistory(
        string calldata _postId
    ) external view returns (uint256[] memory, uint256[] memory) {
        uint256[] memory tippers = new uint256[](tippedCounts[_postId]);
        uint256[] memory tippedBalances = new uint256[](tippedCounts[_postId]);

        for (uint256 i = 0; i < tippedCounts[_postId]; i++) {
            tippers[i] = tippedUsers[_postId][i];
            tippedBalances[i] = tippedBalance[_postId][i];
        }

        return (tippers, tippedBalances);
    }

    function setVariables(
        address _dactPost,
        uint256 _minAmount
    ) external onlyOwner {
        dactPost = _dactPost;
        minTipAmount = _minAmount;
    }

    uint256[49] private __gap;
}
	uint public maxTransferAmount = lutTotalSupply/1000;       
	//各种分红比例 
	uint public LPRatio = 5;                   //5%给LP持有者 
	uint public blackHoleRatio = 7;            //7%给黑洞地址
	uint public LAZYRatio = 2;                 //2%给LAZY代币持有者
    uint public foundation=1;                  //1%给基金会
	uint public inviterRatio = 3;              //3%给邀请人 
	uint public inviterRatio1 = 65;            //第一级邀请人,65%               
	uint public inviterRatio2 = 35;            //第二级邀请人,35% 
    
	//资金池代币和黑洞地址   
    address public LPWallet=0x796E78b3Ed70CA3d5d6Fcf5744770473ccEAA05a;                    //LP钱包地址
    address public LAZYWallet=0xB331eF222C4551cD2b7476403B3A2dE6afa9a01B;                  //LAZY平分钱包地址
    address public foundationWallet=0xB5c4FC27049303e7B4F6b59F13Cd925957B6b224;            //基金会钱包
	address public blackHole=0x000000000000000000000000000000000000dEaD;                   //通缩（死亡）地址
    //是否开启通缩
    bool public isDeflation = true;
	//账户余额映射
	mapping(address => address) private inviterOf;   


 
    constructor() ERC20("ABC Utopia","AbcT"){
    // constructor() ERC20("Lazy Utopia","LUT"){
        holders.push(Holder(msg.sender, lutTotalSupply));
        _mint(msg.sender, lutTotalSupply);
    }
  
    
    //设置代币X钱包地址 
    function setLPWallet(address _LPWallet) public onlyOwner {
        LPWallet = _LPWallet;  
    }
    //设置通缩黑洞地址 
    function setBlackHole(address _blackHole) public onlyOwner {
        blackHole = _blackHole; 
    }  
    //设置LUT持有者平分钱包地址 
    function setLAZYWallet(address _LAZYWallet) public onlyOwner {
        LAZYWallet = _LAZYWallet;  
    }
    //设置基金会钱包地址 
    function setFoundationWallet(address _foundationWallet) public onlyOwner {
        foundationWallet = _foundationWallet; 
    }  
    //更改各种比例 
    function changeRatios(uint _LPRatio, uint _blackHoleRatio,uint _LAZYRatio,uint _foundation, 
                         uint _inviterRatio, uint _inviterRatio1, uint _inviterRatio2) public onlyOwner {
        LPRatio = _LPRatio; 
        blackHoleRatio = _blackHoleRatio;
        inviterRatio = _inviterRatio;
        inviterRatio1 = _inviterRatio1;
        inviterRatio2 = _inviterRatio2; 
        LAZYRatio = _LAZYRatio; 
        foundation=_foundation;
    }  


    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal override {
        require(amount > 0, "Transfer amount must exceed 0");

        if(!isWhiteListed[msg.sender]&&!isWhiteListed[recipient]){
            require(amount <= maxTransferAmount, "Transfer amount exceeds limit");  
        }
              
        //转账金额的7%给黑洞地址
        uint blackHoleFee = amount * blackHoleRatio / 100;
        if(isDeflation){ //如果开启了通缩
            super._transfer(sender,blackHole,blackHoleFee);
            this.updateHolders(sender, blackHole, blackHoleFee);
        }
        //转账金额的1%给基金会
        uint foundationFee = amount * foundation / 100;
        super._transfer(sender,foundationWallet,foundationFee);    
        this.updateHolders(sender, foundationWallet, foundationFee);
        //转账金额的5%给LP持有者 
        uint tokenXfee = amount * LPRatio / 100;
        super._transfer(sender,LPWallet,tokenXfee);    
        this.updateHolders(sender, LPWallet, tokenXfee);
        //转账金额的2%给LUT代币持有者
        uint lutBonus = amount * LAZYRatio / 100;
        super._transfer(sender,LAZYWallet,lutBonus);    
        this.updateHolders(sender, LAZYWallet, lutBonus);

        //邀请人佣金3% 
        uint inviterFee = amount * inviterRatio / 100;    
        //分配给第一级邀请人,65%
        address upperInviter1 = getUpperInviter(msg.sender, 1);   
        uint upFee1 = inviterFee * inviterRatio1 / 100;
        if(upperInviter1!=0x0000000000000000000000000000000000000000){
            super._transfer(sender,upperInviter1,upFee1);           //给第一级推荐人分成转账
            this.updateHolders(sender, upperInviter1, upFee1);
        }
        //分配给第二级邀请人,35%     
        address upperInviter2 = getUpperInviter(msg.sender, 2);        
        uint upFee2 = inviterFee * inviterRatio2 / 100;
        if(upperInviter2!=0x0000000000000000000000000000000000000000){
            super._transfer(sender,upperInviter2,upFee2);            //给第二级推荐人分成转账
            this.updateHolders(sender, upperInviter2, upFee2);
        }
    

        if(inviterOf[recipient] == address(0)) {           
            inviterOf[recipient] = msg.sender;      
        }
    
        uint amountSub=amount-tokenXfee-blackHoleFee-lutBonus-inviterFee-foundationFee;
        super._transfer(sender,recipient,amountSub);
        this.updateHolders(sender, recipient, amountSub);
       
    }


    //获得上级邀请人
    function getUpperInviter(address _user, uint _level) public view returns(address) {
        address inviter;
        if(_level == 1){ 
             inviter=inviterOf[_user];   
        }else if(_level == 2){ 
            address upperInviter1 = inviterOf[_user]; 
             inviter=inviterOf[upperInviter1];
        }
        return inviter;
    }

    function getHolders() public view returns (Holder[] memory) {
        return holders;
    }  
   function updateHolders(address from, address to, uint value)  external {
        int fromIndex = holdersIndex(from);
        int toIndex = holdersIndex(to);
        
        if (fromIndex >= 0 && toIndex >= 0) {
            // 都存在,amount调整
            holders[uint(fromIndex)].amount -= value;
             if(to!=blackHole){
                holders[uint(toIndex)].amount += value;
             }
        } else if (fromIndex >= 0 && toIndex == -1) {
            // from存在,to新增
            holders[uint(fromIndex)].amount -= value;
             if(to!=blackHole){
                holders.push(Holder(to, value)); 
             }
        }
       
    }
    function holdersIndex(address addr) public view returns (int) {
        for (uint i = 0; i < holders.length; i++) {
            if (holders[i].addr == addr) {
                return int(i);
            }
        }
        return -1;
    }
 
}
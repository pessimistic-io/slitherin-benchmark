/**
 * @title P1Deleveraging
 * @author  
 *
 * @notice Contract allowing accounts to be deleveraged by other accounts.
 */
contract P1Deleveraging is
    P1TraderConstants
{
    using BaseMath for uint256;

    // ============ Structs ============

    struct TradeData {
        uint256 amount;
        uint256 close_price;
        uint256 fee_forceclosee;
        uint256 fee_forceclosor;
        bool forceclosee_is_buy;
        SignedMath.Int funding_forceclosee;
        SignedMath.Int funding_forceclosor;
    }

    // ============ Events ============

    event LogForceClose(
        address indexed maker,
        address indexed taker,
        uint256 amount,
        bool taker_isBuy,
        uint256 close_price
    );

    // ============ Immutable Storage ============

    // address of the perpetual contract
    address public _PERPETUAL_V1_;

    // ============ Constructor ============

    constructor (
        address perpetualV1
    )
    {
        _PERPETUAL_V1_ = perpetualV1;
    }

    // ============ External Functions ============

    /**
     * @notice Allows an account  to be deleveraged by another account. 
     *         This allows the account to be partially or fully subsumed by the forceclosor.
     * @dev Emits the LogForceClose event.
     *
     * @param  maker   The account to be foceclosed.
     * @param  taker   The account of the foceclosor.
     * @param  data    A struct of type TradeData.
     * @return         The amounts to be traded, and flags indicating that a forceclose occurred.
     */
    function trade(
        address maker,
        address taker,
        bytes calldata data
    )
        external
        returns (P1Types.TradeResult memory)
    {
        address perpetual = _PERPETUAL_V1_;

        require(
            msg.sender == perpetual,
            "msg.sender must be PerpetualV1"
        );

        TradeData memory tradeData = abi.decode(data, (TradeData));

        bool taker_isBuy = !tradeData.forceclosee_is_buy;
        emit LogForceClose(
            maker,
            taker,
            tradeData.amount,
            taker_isBuy,
            tradeData.close_price
        );

        uint256 margin_change = tradeData.amount.baseMul(tradeData.close_price);
        return P1Types.TradeResult({
            fee_maker: tradeData.fee_forceclosee,
            fee_taker: tradeData.fee_forceclosor,
            funding_maker: tradeData.funding_forceclosee,
            funding_taker: tradeData.funding_forceclosor,
            positionAmount: tradeData.amount,
            margin_change: margin_change,
            is_neg_fee: false,
            isBuy: taker_isBuy,
            traderFlags: TRADER_FLAG_DELEVERAGING
        });
    }
}
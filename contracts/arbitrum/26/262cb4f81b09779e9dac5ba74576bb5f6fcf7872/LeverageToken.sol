                pool.repay(
                    address(DEBT_TOKEN),
                    amountOut,
                    VARIABLE_INTEREST,
                    address(this)
                );
                break;
            }
        }
        pool.withdraw(address(COLLATERAL_TOKEN), amount, address(this));
    }

    function _supplyCollateral(uint256 amount) private {
        COLLATERAL_TOKEN.approve(address(pool), amount);
        pool.deposit(address(COLLATERAL_TOKEN), amount, address(this), 0);
    }

    function _borrowDebt(uint256 amount) private {
        pool.borrow(
            address(DEBT_TOKEN),
            amount,
            VARIABLE_INTEREST, // (1=STABLE, 2=VARIABLE)
            0,
            address(this)
        );
    }

    function _repayDebtWithCollateral(uint256 amount) private {
        /* repay DEBT_TOKEN from deposited COLLATERAL_TOKEN */
        pool.withdraw(address(COLLATERAL_TOKEN), amount, address(this));
        uint256 amountOut = _collateralToDebtToken(amount);
        TransferHelper.safeApprove(
            address(DEBT_TOKEN),
            address(pool),
            amountOut
        );
        pool.repay(
            address(DEBT_TOKEN),
            amountOut,
            VARIABLE_INTEREST,
            address(this)
        );
    }

    function _collateralToDebtToken(uint256 amount) private returns (uint256) {
        /* Trade COLLATERAL_TOKEN to DEBT_TOKEN on UniswapV3 */
        TransferHelper.safeApprove(
            address(COLLATERAL_TOKEN),
            address(uniswapV3Router),
            amount
        );
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: address(COLLATERAL_TOKEN),
                tokenOut: address(DEBT_TOKEN),
                fee: 500,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: amount,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });
        return uniswapV3Router.exactInputSingle(params);
    }

    function _debtToCollateralToken(uint256 amount) private returns (uint256) {
        /* Trade DEBT_TOKEN to COLLATERAL_TOKEN on UniswapV3 */
        TransferHelper.safeApprove(
            address(DEBT_TOKEN),
            address(uniswapV3Router),
            amount
        );
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: address(DEBT_TOKEN),
                tokenOut: address(COLLATERAL_TOKEN),
                fee: 500,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: amount,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });
        return uniswapV3Router.exactInputSingle(params);
    }

    function _getCollateralPrice() internal view returns (uint256) {
        return oracle.getAssetPrice(address(COLLATERAL_TOKEN));
    }

    function _getBorrowPrice() internal view returns (uint256) {
        return oracle.getAssetPrice(address(DEBT_TOKEN));
    }

    function _valueToCollateral(
        uint256 _amount
    ) internal view returns (uint256) {
        uint256 _collateralPrice = _getCollateralPrice();
        return (_amount * 1e18) / _collateralPrice;
    }

    function _valueToDebt(uint256 _amount) internal view returns (uint256) {
        uint256 _debtPrice = _getBorrowPrice();
        return (_amount * 1e6) / _debtPrice;
    }

    /*
     * Handler for collateral to allow for wrap/unwrap WETH or any other token actions
     * when sending collateral to recipient
     */

    function _handleCollateral(
        uint256 _amount,
        address recipient
    ) internal virtual;

    /*
     * Leverage Calculation Functions
     * -- These need to be set for the target ratio of collateral and debt
     * -- Typically will be LEVERAGE * _amount1 - (LEVERAGE - 1) * _amount2
     */
    function _calculateRepayAmount(
        uint256 _collateralValue,
        uint256 _debtValue
    ) internal pure virtual returns (uint256);

    function _calculateLeverageAmount(
        uint256 _collateralValue,
        uint256 _debtValue
    ) internal pure virtual returns (uint256);
}

contract Aave2xEthHedge is BaseHedge {
    uint256 public constant LEVERAGE = 2;
    IWETH9 constant WETH = IWETH9(0x82aF49447D8a07e3bd95BD0d56f35241523fBab1);

    constructor(address _oracle) Ownable() {
        if (_oracle != address(0)) {
            oracle = IAaveOracle(_oracle);
        }

        AAVE_COLLATERAL = IERC20(0xe50fA9b3c56FfB159cB0FCA61F5c9D750e8128c8); // aArbWETH
        AAVE_DEBT = IERC20(0xFCCf3cAbbe80101232d343252614b6A3eE81C989); // variableDebtArbUSDC

        COLLATERAL_TOKEN = IERC20(0x82aF49447D8a07e3bd95BD0d56f35241523fBab1); // WETH
        DEBT_TOKEN = IERC20(0xFF970A61A04b1cA14834A43f5dE4533eBDDB5CC8); // USDC
    }

    function _calculateRepayAmount(
        uint256 _collateralValue,
        uint256 _debtValue
    ) internal pure override returns (uint256) {
        // NOTE: should never overflow because check for debt > 2 * collateral
        return LEVERAGE * _debtValue - _collateralValue;
    }

    function _calculateLeverageAmount(
        uint256 _collateralValue,
        uint256 _debtValue
    ) internal pure override returns (uint256) {
        // NOTE: should never overflow because check for collateral > 2 * debt
        return _collateralValue - LEVERAGE * _debtValue;
    }

    function _handleCollateral(
        uint256 _amount,
        address _recipient
    ) internal override {
        WETH.withdraw(_amount);
        (bool sent, ) = payable(_recipient).call{value: _amount}("");
        require(sent, "Aave2xEthHedge: Failed to send Ether");
    }
}

contract ElasticSupplyToken is ERC20Permit {
    uint256 internal constant MAX_SUPPLY = type(uint64).max;
    uint256 private constant MAX_UINT256 = type(uint256).max;
    uint256 private constant TOTAL_GONS = type(uint128).max;

    mapping(address => uint256) private _gonBalances;
    uint256 internal _totalSupply;
    uint256 internal _gonsPerFragment;

    mapping(address => mapping(address => uint256)) private _allowedFragments;

    event LogRebase(uint256 indexed epoch, uint256 totalSupply);

    modifier validRecipient(address to) {
        require(to != address(0x0));
        _;
    }

    constructor(
        string memory name,
        string memory symbol
    ) ERC20(name, symbol) ERC20Permit(name) {
        _gonsPerFragment = TOTAL_GONS / MAX_SUPPLY;
    }

    /**
     * @param who The address to query.
     * @return The balance of the specified address.
     */
    function balanceOf(address who) public view override returns (uint256) {
        return _gonBalances[who] / _gonsPerFragment;
    }

    /**
     * @param who The address to query.
     * @return The gon balance of the specified address.
     */
    function scaledBalanceOf(address who) external view returns (uint256) {
        return _gonBalances[who];
    }

    /**
     * @return the total number of gons.
     */
    function scaledTotalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    /**
     * @dev Transfer tokens to a specified address.
     * @param to The address to transfer to.
     * @param value The amount to be transferred.
     * @return True on success, false otherwise.
     */
    function transfer(
        address to,
        uint256 value
    ) public override validRecipient(to) returns (bool) {
        _transfer(msg.sender, to, value);

        emit Transfer(msg.sender, to, value);
        return true;
    }

    /**
     * @dev Function to check the amount of tokens that an owner has allowed to a spender.
     * @param owner_ The address which owns the funds.
     * @param spender The address which will spend the funds.
     * @return The number of tokens still available for the spender.
     */
    function allowance(
        address owner_,
        address spender
    ) public view override returns (uint256) {
        return _allowedFragments[owner_][spender];
    }

    /**
     * @dev Transfer tokens from one address to another.
     * @param from The address you want to send tokens from.
     * @param to The address you want to transfer to.
     * @param value The amount of tokens to be transferred.
     */
    function transferFrom(
        address from,
        address to,
        uint256 value
    ) public override validRecipient(to) returns (bool) {
        _allowedFragments[from][msg.sender] -= value;
        _transfer(from, to, value);

        return true;
    }

    function _transfer(
        address from,
        address to,
        uint256 value
    ) internal virtual override {
        uint256 gonValue = value * _gonsPerFragment;
        _gonBalances[from] -= gonValue;
        _gonBalances[to] += gonValue;

        emit Transfer(from, to, value);
    }

    /**
     * @dev Approve the passed address to spend the specified amount of tokens on behalf of
     * msg.sender. This method is included for ERC20 compatibility.
     * increaseAllowance and decreaseAllowance should be used instead.
     * Changing an allowance with this method brings the risk that someone may transfer both
     * the old and the new allowance - if they are both greater than zero - if a transfer
     * transaction is mined before the later approve() call is mined.
     *
     * @param spender The address which will spend the funds.
     * @param amount The amount of tokens to be spent.
     */
    function approve(
        address spender,
        uint256 amount
    ) public override returns (bool) {
        address owner = _msgSender();
        _approve(owner, spender, amount);

        return true;
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal virtual override {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowedFragments[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    /**
     * @dev Increase the amount of tokens that an owner has allowed to a spender.
     * This method should be used instead of approve() to avoid the double approval vulnerability
     * described above.
     * @param spender The address which will spend the funds.
     * @param addedValue The amount of tokens to increase the allowance by.
     */
    function increaseAllowance(
        address spender,
        uint256 addedValue
    ) public override returns (bool) {
        _allowedFragments[msg.sender][spender] += addedValue;

        emit Approval(
            msg.sender,
            spender,
            _allowedFragments[msg.sender][spender]
        );
        return true;
    }

    /**
     * @dev Decrease the amount of tokens that an owner has allowed to a spender.
     *
     * @param spender The address which will spend the funds.
     * @param subtractedValue The amount of tokens to decrease the allowance by.
     */
    function decreaseAllowance(
        address spender,
        uint256 subtractedValue
    ) public override returns (bool) {
        uint256 oldValue = _allowedFragments[msg.sender][spender];
        _allowedFragments[msg.sender][spender] = (subtractedValue >= oldValue)
            ? 0
            : oldValue - subtractedValue;

        emit Approval(
            msg.sender,
            spender,
            _allowedFragments[msg.sender][spender]
        );
        return true;
    }

    function _mint(
        address _recipient,
        uint256 amount
    ) internal virtual override {
        uint256 gonValue = amount * _gonsPerFragment;
        _gonBalances[_recipient] += gonValue;
        _totalSupply += gonValue;
        emit Transfer(address(0), _recipient, amount);
    }

    function burn(uint256 amount) public {
        _burn(msg.sender, amount);
    }

    function _burn(address account, uint256 amount) internal override {
        uint256 gonValue = amount * _gonsPerFragment;
        _gonBalances[account] -= gonValue;
        _totalSupply -= gonValue;
        emit Transfer(account, address(0), amount);
    }

    function totalSupply() public view virtual override returns (uint256) {
        return _totalSupply / _gonsPerFragment;
    }
}

contract LeverageToken is
    ElasticSupplyToken,
    Aave2xEthHedge,
    ILeverageToken,
    Pausable,
    ReentrancyGuard
{
    using Counters for Counters.Counter;
    using SafeERC20 for IERC20;

    bool public frozen;
    uint256 public dailyFee = 50;
    uint256 constant FEE_BASE = 100000;
    uint256 public constant REBASE_FREQUENCY = 1 days;

    // IVault public vault;
    Counters.Counter public epoch;
    IVault.Token public _type;
    uint256 public price = 100 ether;
    int256 PRECISION = 1e18;

    uint256 lastRebase;
    address feeRecipient;

    uint256 lastEthPrice;
    int8 public leverage;
    uint256 postMintDelay = 1 seconds;
    mapping(address => bool) _isExempt;
    mapping(address => uint256) public lastInteraction;

    modifier update() {
        _updatePrice();
        _;
        _balanceLeverage();
    }

    modifier whenNotFrozen() {
        require(!frozen, "Frozen");
        _;
    }

    constructor(
        string memory name,
        string memory symbol,
        int8 _leverage,
        IVault.Token type_,
        address _feeRecipient,
        address _oracle
    ) ElasticSupplyToken(name, symbol) Aave2xEthHedge(_oracle) {
        leverage = _leverage;
        _type = type_;
        feeRecipient = _feeRecipient;

        lastEthPrice = _getCollateralPrice();
        lastRebase = block.timestamp;
    }

    /*
     * PARAM UPDATES
     */

    function updatePostMintDelay(uint256 _delay) external onlyOwner {
        postMintDelay = _delay;
        emit UpdatePostMintDelay(_delay);
    }

    function updateFee(uint256 _fee, address _recipient) external onlyOwner {
        require(_fee <= 1000, "fee too large");
        dailyFee = _fee;
        feeRecipient = _recipient;

        emit UpdateFee(_fee, _recipient);
    }

    function handleUpdate() external onlyOwner {
        _updatePrice();
        _balanceLeverage();
    }

    function rebase() external {
        require(
            lastRebase + REBASE_FREQUENCY < block.timestamp ||
                msg.sender == owner(),
            "LeverageToken: unauthorized rebase"
        );

        _updatePrice();
        _rebase();
        _balanceLeverage();
        lastRebase = block.timestamp;
    }

    function setExempt(address _wallet, bool _exempt) external onlyOwner {
        _isExempt[_wallet] = _exempt;
        emit SetExemption(_wallet, _exempt);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function freeze() external onlyOwner {
        // this is used to freeze redeem, as a separate function to pause
        // When the contract gets terminated, we will pause the contract but still allow redeem
        // If there is oracle risk, we will also want to freeze redemption.
        frozen = true;
    }

    function unfreeze() external onlyOwner {
        frozen = false;
    }

    /*
     * ROUTING
     */

    function purchase(
        uint256 _amount
    ) external payable nonReentrant whenNotPaused update {
        COLLATERAL_TOKEN.safeTransferFrom(msg.sender, address(this), _amount);
        uint256 amountOut = getAmountOut(_amount);
        _leverage();
        uint256 fee = (amountOut * 3) / 1000;
        _mint(feeRecipient, fee);
        _mint(msg.sender, amountOut - fee);
    }

    function redeem(uint256 amount) external payable nonReentrant update {
        // no need to approve
        _transfer(msg.sender, address(this), amount);
        // deleverage proportionate share of total
        uint256 deleverageAmount = getRedeemAmount(amount);

        _deleverage(deleverageAmount);
        COLLATERAL_TOKEN.safeTransfer(msg.sender, deleverageAmount);
        _burn(address(this), amount);
    }

    function purchaseETH() external payable nonReentrant whenNotPaused update {
        uint256 amountOut = getAmountOut(msg.value);
        WETH.deposit{value: msg.value}();
        _leverage();
        uint256 fee = (amountOut * 3) / 1000;
        _mint(feeRecipient, fee);
        _mint(msg.sender, amountOut - fee);
    }

    function redeemETH(
        uint256 amount
    ) external payable whenNotFrozen nonReentrant update {
        // no need to approve
        _transfer(msg.sender, address(this), amount);
        // deleverage proportionate share of total
        uint256 deleverageAmount = getRedeemAmount(amount);

        _deleverage(deleverageAmount);
        _handleCollateral(deleverageAmount, msg.sender);
        _burn(address(this), amount);
    }

    // Recover tokens accidently sent to contract address
    function recoverDeadTokens() external onlyOwner {
        transfer(owner(), balanceOf(address(this)));
    }

    /*
     * VIEWS
     */

    function getAmountOut(uint256 amount) public view returns (uint256) {
        (uint256 price_, ) = _calcNewPrice();
        return (amount * price_) / 1e18;
    }

    function getRedeemAmount(uint256 amount) public view returns (uint256) {
        uint256 _ethValue = collateralValue();
        uint256 _usdcValue = debtValue();
        uint256 ethAmount = _valueToCollateral(_ethValue - _usdcValue);

        return (ethAmount * amount) / totalSupply();
    }

    /*
     * INTERNAL
     */

    function _updatePrice() internal {
        (price, lastEthPrice) = _calcNewPrice();
        emit NewPrice(price, lastEthPrice);
    }

    function _calcNewPrice()
        internal
        view
        returns (uint256 _price, uint256 _newEthPrice)
    {
        _newEthPrice = _getCollateralPrice();
        int256 ratio = int256(
            (_newEthPrice * uint256(PRECISION)) / lastEthPrice
        ) - PRECISION;
        // // handle negative leverage
        // int256 diff = int256(price) -
        //     int256((price * _newEthPrice) / lastEthPrice);
        // price = uint256(int256(price) - diff * leverage);
        _price = uint256(
            int256(price) + (ratio * leverage * int256(price)) / PRECISION
        );
    }

    /**
     * @dev Notifies Fragments contract about a new rebase cycle.
     */
    function _rebase() internal {
        uint256 _newEthPrice = _getCollateralPrice();
        _issueBorrowFee();

        int256 supplyDelta = int256(
            (_totalSupply * _newEthPrice) / lastEthPrice
        ) - int256(_totalSupply);
        lastEthPrice = _newEthPrice;
        epoch.increment();

        if (supplyDelta == 0) {
            _gonsPerFragment = ((_gonsPerFragment * 100 ether) / price);
            price = 100 ether;
            emit LogRebase(epoch.current(), _totalSupply);

            return;
        }

        uint256 _prevTotalSupply = _totalSupply;
        if (supplyDelta < 0) {
            _totalSupply -= SignedMath.abs(supplyDelta);
        } else {
            _totalSupply += uint256(supplyDelta);
        }

        // TODO: handle max supply?

        _gonsPerFragment = (_gonsPerFragment * _prevTotalSupply) / _totalSupply;

        // From this point forward, _gonsPerFragment is taken as the source of truth.
        // We recalculate a new _totalSupply to be in agreement with the _gonsPerFragment
        // conversion rate.
        // This means our applied supplyDelta can deviate from the requested supplyDelta,
        // but this deviation is guaranteed to be < (_totalSupply^2)/(TOTAL_GONS - _totalSupply).
        //
        // In the case of _totalSupply <= MAX_UINT128 (our current supply cap), this
        // deviation is guaranteed to be < 1, so we can omit this step. If the supply cap is
        // ever increased, it must be re-included.
        // _totalSupply = TOTAL_GONS.div(_gonsPerFragment)

        emit LogRebase(epoch.current(), _totalSupply);
        price = 100 ether;
    }

    function _mint(
        address _recipient,
        uint256 amount
    ) internal virtual override {
        lastInteraction[_recipient] = block.timestamp;
        super._mint(_recipient, amount);
    }

    function _transfer(
        address from,
        address to,
        uint256 value
    ) internal virtual override {
        if (!_isExempt[from] || !_isExempt[to]) {
            require(
                lastInteraction[from] + postMintDelay <= block.timestamp,
                "insufficent delay before transfer"
            );
        }
        super._transfer(from, to, value);
    }

    function _issueBorrowFee() internal {
        uint256 dailyTax = (totalSupply() * dailyFee) / FEE_BASE;
        uint256 timeframe = block.timestamp - lastRebase;

        // mint daily tax
        emit FeeIssued(feeRecipient, (dailyTax * timeframe) / 1 days);
        super._mint(feeRecipient, (dailyTax * timeframe) / 1 days);
    }
}
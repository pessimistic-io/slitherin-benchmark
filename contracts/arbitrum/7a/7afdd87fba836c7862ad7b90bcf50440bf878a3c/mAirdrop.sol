pragma solidity 0.8.20;

import "./ImAirdrop.sol";
import "./ERC20.sol";
import "./SafeMath.sol";
import "./Ownable.sol";

contract mAirdrop is ImAirdrop, ERC20, Ownable {
    using SafeMath for uint256;

    uint256 public _maxSupply;

    constructor(uint256 maxSupply) ERC20("muchoAirdrop", "mAirdrop") {
        _maxSupply = maxSupply;
    }

    function setMaxSupply(uint256 newMaxSupply) external onlyOwner {
        require(
            newMaxSupply >= totalSupply(),
            "mAirdrop: max supply bigger than total supply"
        );
        _maxSupply = newMaxSupply;
    }

    function burn(address _from, uint256 _amount) external onlyOwner {
        _burn(_from, _amount);
    }

    function mint(address recipient, uint256 _amount) external onlyOwner {
        require(
            totalSupply().add(_amount) <= _maxSupply,
            "mAirdrop: max supply reached"
        );
        _mint(recipient, _amount);
    }

    function decimals()
        public
        pure
        override(ERC20, IERC20Metadata)
        returns (uint8)
    {
        return 6;
    }
}


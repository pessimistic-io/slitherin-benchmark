pragma solidity ^0.8.9;





contract LLAMILiquidityAggregator is Auth {
    using SafeMath for uint256;

    IBEP20 LLAMI = IBEP20(0xCA2d2cF3861374FBB40c34c5a4f290a679e10E9E);
    IDEXRouter router = IDEXRouter(0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506);
    address LLAMItreasury = 0x4f81b4869b198Ec528780f88D63B83EF1B815Ff0;
    uint256 tax = 0;

    constructor () Auth(msg.sender) {
        LLAMI.approve(address(router), type(uint256).max);
    }

    function AddLiquidity() public payable {
        uint256 amountTaxed = msg.value.mul(tax).div(100);
        uint256 addLiqAmount = msg.value.mul(100 - tax).div(100);

        address[] memory path = new address[](2);
        path[0] = 0x82aF49447D8a07e3bd95BD0d56f35241523fBab1;
        path[1] = address(LLAMI);

        //Buy llami
        uint256 balanceBefore = LLAMI.balanceOf(address(this));
        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: addLiqAmount.div(2)}(
            0,
            path,
            address(this),
            block.timestamp
        );
        uint256 LLAMIbought = LLAMI.balanceOf(address(this)).sub(balanceBefore);

        //Add liquidity and send pair to caller
        router.addLiquidityETH{value: addLiqAmount.div(2)}(
            address(LLAMI), 
            LLAMIbought.sub(1000000000),
            0, 
            0,  
            msg.sender, 
            block.timestamp
        );

        //Send one token to caller so he will be included into shareholders list of reward distributor contract
        LLAMI.transfer(msg.sender, 1000000000);

        //Send taxes
        if(amountTaxed > 0){
            payable(LLAMItreasury).transfer(amountTaxed);
        }

        //Send eth left back if any
        if(address(this).balance > 0){
            payable(msg.sender).transfer(address(this).balance);
        }
    }

    function setTax(uint256 _tax, address _llamiTreasury) public onlyOwner {
        require(_tax <= 10, "Can not be higher than current tax");
        tax = _tax;
        LLAMItreasury = _llamiTreasury;
    }

    receive() external payable { }
}
    // Check accumulated token is less than max token
    require(
      accumulatedToken < maxAccumulatedToken,
      "MagicRefineryMinter: Capacity full"
    );

    // Add up total quantities
    uint256 totalQuantity = _quantities[0] + _quantities[1] + _quantities[2];

    // Check if wallet has enough mints left
    require(
      totalQuantity <= (maxMintable - minted[msg.sender]),
      "MagicRefineryMinter: Not enough mints left"
    );

    // Check if sender owns enough Realms
    require(
      REALM.balanceOf(msg.sender) > 0,
      "MagicRefineryMinter: You must own a Realm"
    );

    // Add total to minted
    minted[msg.sender] += totalQuantity;

    for (uint256 j = 0; j < _quantities.length; j++) {
      uint256 quantity = _quantities[j];

      // Continue if quantiy is zero
      if (quantity == 0) continue;

      // Get tier cost
      uint256 tierCost = costs[j];

      // Calculate costs
      uint256 totalCost = tierCost * quantity;

      // Add to accumulated token
      accumulatedToken += totalCost;

      // Transfer to vault
      TOKEN.safeTransferFrom(msg.sender, VAULT, totalCost);

      // Mint
      uint256 startTokenId = REFINERY.mintFor(msg.sender, quantity);

      // Set tier
      uint256 tier = j + 3;

      // Create data
      for (uint256 i = 0; i < quantity; i++) {
        uint256 id = i + startTokenId;
        DATA.create(id, tier, tierCost);

        emit Minted(id, address(REFINERY), tier, tierCost);
      }
    }
  }

  function subtractFromAccumulatedToken(uint256 _amount) external onlyManager {
    accumulatedToken -= _amount;
  }


contract TokenLocker is Ownable {
    using SafeMath for uint256;

    mapping(address => mapping(address => uint256)) balances;

    uint256 public unlockTime;

    constructor() {
        unlockTime = block.timestamp + 3600 * 24 * 7 * 2;
    }

    function deposit(address token, uint256 amount) public onlyOwner {
        IERC20(token).transferFrom(msg.sender, address(this), amount);
        balances[msg.sender][token] = amount;
    }

    function withdraw(address token) public onlyOwner {
        require(balances[msg.sender][token] > 0, "no token");
        require(block.timestamp > unlockTime, "not unlocked");

        IERC20(token).transfer(msg.sender, balances[msg.sender][token]);
        balances[msg.sender][token] = 0;
    }

    function getBalance(address depositer, address token)
        public
        view
        returns (uint256)
    {
        return balances[depositer][token];
    }
}
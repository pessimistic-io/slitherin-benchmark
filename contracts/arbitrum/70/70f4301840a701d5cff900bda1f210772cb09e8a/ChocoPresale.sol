interface IChocoburn {
    function burn(uint256 amount) external;
}

contract ChocoPresale is ReentrancyGuard {
    event Burn(uint256 amount);
    event AddedLiquidity(uint256 ethAmount,uint256 chocoAmount);

    address public immutable owner;
    uint256 public immutable startTime;
    uint256 public immutable endTime;

    mapping(address => uint256) public amountPurchased;
    uint256 public immutable maxPerWallet = 6 ether;
    uint256 public immutable presalePrice = 7000000000 * 1e18;
    uint256 public totalPurchased = 0;
    uint256 public presaleMax;

    uint256 public pending = 0;

    address public immutable CHOCO;
    address public immutable CAMELOT_ROUTER = 0xc873fEcbd354f5A56E00E710B90EF4201db2448d;

    address public treasury;
    
    bool public burned = false;
    bool public liquidityAdded = false;
    

    constructor(uint256 _startTime, address _CHOCO, uint256 _max, address _treasury) {
        owner = msg.sender;
        startTime = _startTime;
        endTime = _startTime + 1 days;
        CHOCO = _CHOCO;
        presaleMax = _max;
        treasury = _treasury;
    }

    modifier onlyOwner {
        require(owner == msg.sender);
        _;
    }

    function buyPresale() external payable {
        require(block.timestamp >= startTime && block.timestamp <= endTime, "Not active");
        require(msg.sender == tx.origin, "No contracts");
        require(msg.value > 0, "Zero amount");
        require(amountPurchased[msg.sender] + msg.value <= maxPerWallet, "Over wallet limit");
        require(totalPurchased + msg.value <= presaleMax, "Amount over limit");
        amountPurchased[msg.sender] += msg.value;
        totalPurchased += msg.value;
        pending += msg.value * presalePrice / 1e18;
    }

    function claim() external {
        require(block.timestamp > endTime + 1 hours, "Not claimable");
        require(amountPurchased[msg.sender] > 0, "No amount claimable");
        uint256 amount = amountPurchased[msg.sender] * presalePrice / 1e18;
        pending -= amount;
        amountPurchased[msg.sender] = 0;
        IERC20(CHOCO).transfer(msg.sender, amount);
    }

    function setMax(uint256 _max) external onlyOwner {
        presaleMax = _max;
    }

    function addLiquidity() external onlyOwner nonReentrant {
        require(block.timestamp > endTime, "Not finished");

        IERC20(CHOCO).approve(CAMELOT_ROUTER, type(uint256).max);
        uint256 totalAmount = address(this).balance;
        (bool success,) = owner.call{value: totalAmount * 20 / 100}("");
        require(success);
        // could just reuse previous success..left for simplicity
        (bool success2,) = treasury.call{value: totalAmount * 10 / 100}("");
        require(success2);

        uint256 ethAmount = totalAmount - (totalAmount * 30 / 100);
        uint256 chocoAmount = (ethAmount * presalePrice / 1e18) * 70 / 100;
        IUniswapV2Router02(CAMELOT_ROUTER).addLiquidityETH{value: ethAmount}(
            CHOCO,
            chocoAmount,
            1,
            1,
            0x000000000000000000000000000000000000dEaD,
            type(uint256).max
        );
        emit AddedLiquidity(ethAmount, chocoAmount);
        liquidityAdded = true;

    }

    function burn() external onlyOwner {
        require(block.timestamp > endTime, "Not finished");
        if (!burned && liquidityAdded) {
            uint256 presaleBalance = IERC20(CHOCO).balanceOf(address(this));

            uint256 totalBurnedTokens = presaleBalance - (totalPurchased * presalePrice / 1e18);
            IChocoburn(CHOCO).burn(totalBurnedTokens); 
            burned = true;
            emit Burn(totalBurnedTokens);
        }
    }
}
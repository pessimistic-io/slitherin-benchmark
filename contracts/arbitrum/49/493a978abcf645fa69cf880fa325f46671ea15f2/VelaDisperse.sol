contract VelaDisperse is Ownable {
    using SafeMath for uint256;
    event VelaTokenDisperse(address tokenAddress, uint totalAddresses, uint totalAmount);
    event VelaEtherDisperse(uint totalAddresses, uint totalAmount);

    function disperseToken(address[] memory addresses, uint[] memory amounts, address tokenAddress) external  onlyOwner {
        IERC20 token = IERC20(tokenAddress);
        uint totalAmount = 0;
        require(addresses.length == amounts.length, "Addresses length and amounts length do not match.");
        for(uint i; i < addresses.length; i++){
            totalAmount.add(amounts[i]);
            token.transferFrom(msg.sender, addresses[i], amounts[i]);
        }
        emit VelaTokenDisperse(tokenAddress, addresses.length, totalAmount);
    }

    function disperseEther(address[] memory addresses, uint[] memory amounts) external  payable onlyOwner {
        require(addresses.length == amounts.length, "Addresses length and amounts length do not match.");
        uint256 total = msg.value;

        for (uint i; i < addresses.length; i++) {
            require(total >= amounts[i], "Not enough ETH sent.");
            total = total.sub(amounts[i]);
            payable(addresses[i]).transfer(amounts[i]);
        }

        emit VelaEtherDisperse(addresses.length, msg.value);
    }

    function Sweep(address tokenAddress) external onlyOwner {
      if(tokenAddress == address(0)){
        payable(msg.sender).transfer(address(this).balance);
      } else {
        IERC20 token = IERC20(tokenAddress);
        token.transfer(msg.sender, token.balanceOf(address(this)));
      }
    }

}
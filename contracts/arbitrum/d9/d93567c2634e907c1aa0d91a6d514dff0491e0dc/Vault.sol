interface IUniswapRouterETH {
    function addLiquidity(
        address tokenA,
        address tokenB,
        uint amountADesired,
        uint amountBDesired,
        uint amountAMin,
        uint amountBMin,
        address to,
        uint deadline
    ) external returns (uint amountA, uint amountB, uint liquidity);

    function addLiquidityETH(
        address token,
        uint amountTokenDesired,
        uint amountTokenMin,
        uint amountETHMin,
        address to,
        uint deadline
    ) external payable returns (uint amountToken, uint amountETH, uint liquidity);

    function removeLiquidity(
        address tokenA,
        address tokenB,
        uint liquidity,
        uint amountAMin,
        uint amountBMin,
        address to,
        uint deadline
    ) external returns (uint amountA, uint amountB);

    function removeLiquidityETH(
        address token,
        uint liquidity,
        uint amountTokenMin,
        uint amountETHMin,
        address to,
        uint deadline
    ) external returns (uint amountToken, uint amountETH);

    function swapExactTokensForTokens(
        uint amountIn, 
        uint amountOutMin, 
        address[] calldata path, 
        address to, 
        uint deadline
    ) external returns (uint[] memory amounts);

    function swapExactETHForTokens(uint amountOutMin, address[] calldata path, address to, uint deadline)
        external
        payable
        returns (uint[] memory amounts);
    
    function swapExactTokensForETH(uint amountIn, uint amountOutMin, address[] calldata path, address to, uint deadline)
        external
        returns (uint[] memory amounts);

    function getAmountsOut(uint amountIn, address[] calldata path) external view returns (uint[] memory amounts);
}


interface IStrategy {
    function vault() external view returns (address);
    function want() external view returns (IERC20);
    function beforeDeposit() external;
    function deposit() external;
    function withdraw(uint256) external;
    function balanceOf() external view returns (uint256);
    function balanceOfWant() external view returns (uint256);
    function balanceOfPool() external view returns (uint256); 
    function harvest() external;
    function retireStrat() external;
    function panic() external;
    function pause() external;
    function unpause() external;
    function paused() external view returns (bool);
    function unirouter() external view returns (address);
}



contract Vault is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    IStrategy public strategy;
    
    IERC20 public want;

    address public weth;

    uint256 public totalShares;

    uint256 public lastReciveTime;


    struct UserInfo {
        uint256 shares;
    }
 
    mapping(address => UserInfo) public userInfos;

    constructor(
            IStrategy strategy_,
            IERC20 want_,
            address weth_
    ) {
        Ownable.__Ownable_init();
        strategy = strategy_;
        want = want_;
        weth = weth_;
    }


    function available() public view returns (uint256) {
        return want.balanceOf(address(this));
    }

    function earn() public {
      uint _bal = available();
      want.safeTransfer(address(strategy), _bal);
      strategy.deposit();
    }

    function balance() public view returns (uint) {
      return want.balanceOf(address(this)).add(IStrategy(strategy).balanceOf());
    }

    function deposit(uint _amount, address[] memory _path) public payable nonReentrant returns(uint256) {
        strategy.beforeDeposit();
        UserInfo storage _userInfo = userInfos[tx.origin];
        uint256 _pool = balance();
        if(_path.length > 0) {
            swapDeposit(_amount, _path);
        } else {
            want.safeTransferFrom(tx.origin, address(this), _amount);
        }
        earn();
        uint256 _after = balance();
        _amount = _after.sub(_pool); // Additional check for deflationary tokens
        uint256 shares;
        if(totalShares == 0 ) {
          shares = _amount;
        } else {
          shares = (_amount.mul(totalShares)).div(_pool);
        }
        _userInfo.shares = _userInfo.shares.add(shares);
        totalShares = totalShares.add(shares);

        refund(address(want));
        if(_path.length >= 2) {
            refund(_path[0]);
            refund(_path[_path.length - 1]);
        }

        return shares;
    }

    function swapDeposit(uint256 _amount, address[] memory _path) internal {
        address lpTokenIn = _path[0];
        address lpTokenOut = _path[_path.length - 1];

        if(_amount != 0 ) {
            IERC20(lpTokenIn).safeTransferFrom(tx.origin, address(this), _amount);
        }
        if(_path[0] == weth) {
            _amount += IERC20(weth).balanceOf(address(this));
        }
  
        IUniswapRouterETH _router = IUniswapRouterETH(strategy.unirouter());
        IERC20(lpTokenIn).safeApprove(address(_router), _amount);
        _router.swapExactTokensForTokens(
            _amount / 2, 0, _path, address(this), block.timestamp
        );
        
        uint256 lp0Bal = IERC20(lpTokenIn).balanceOf(address(this));
        uint256 lp1Bal = IERC20(lpTokenOut).balanceOf(address(this));
        IERC20(lpTokenOut).safeApprove(address(_router), lp1Bal);
        
        _router.addLiquidity(
            lpTokenIn, lpTokenOut, lp0Bal, lp1Bal, 1, 1, address(this), block.timestamp
        );
    }

    function withdraw(uint256 _shares, address[] memory _path) public nonReentrant {
        UserInfo storage _userInfo = userInfos[tx.origin];

        uint256 r = (balance().mul(_shares)).div(totalShares);
        _userInfo.shares -= _shares;
        totalShares -= _shares;

        uint b = want.balanceOf(address(this));
        if (b < r) {
            uint _withdraw = r.sub(b);
            strategy.withdraw(_withdraw);
            uint _after = want.balanceOf(address(this));
            uint _diff = _after.sub(b);
            if (_diff < _withdraw) {
                r = b.add(_diff);
            }
        }

        want.safeTransfer(tx.origin, r);
    }

    function refund(address token) internal {
        uint256 _balance = IERC20(token).balanceOf(address(this));
        if(_balance > 0) {
            IERC20(token).transfer(tx.origin, _balance);
        }
    }

    function userAmount(address user) external view returns(uint256 amount) {
        UserInfo memory _userInfo = userInfos[user];
        if(_userInfo.shares == 0 ) return amount;
        amount = balance() * _userInfo.shares / totalShares;
    }

}

            accArbPerShare: 0,
            totalDepositedAmount: 0,
            depositFee: _depositFee,
            isStarted: _isStarted,
            isLP: isLP
        }));

        if (_isStarted) {
            totalAllocPoint = totalAllocPoint.add(_allocPoint);
        }
    }

    // Update the given pool's ARB allocation point. Can only be called by the owner.
    function set(uint256 _pid, uint256 _allocPoint) public onlyOperator {
        massUpdatePools();
        PoolInfo storage pool = poolInfo[_pid];
        if (pool.isStarted) {
            totalAllocPoint = totalAllocPoint.sub(pool.allocPoint).add(_allocPoint);
        }
        pool.allocPoint = _allocPoint;
    }

    function createUserPool() public {
        require(userPools[msg.sender] == address(0), "your pool is already created");
        bytes32 salt = keccak256(abi.encodePacked(msg.sender, address(this)));
        Proxy newContract = new Proxy{salt: salt}(userPoolMaster);
        address userPool = address(newContract);
        require(poolOwner[userPool] == address(0), "there is different owner");
        require(isUserPool[userPool] == false, "already created");
        IUserPool(userPool).init(msg.sender, address(arb));
        isUserPool[userPool] = true;
        userPools[msg.sender] = userPool;
        poolOwner[userPool] = msg.sender;
        emit PoolCreated(msg.sender, userPool);
    }

    // Return accumulate rewards over the given _from to _to block.
    function getGeneratedReward(uint256 _fromTime, uint256 _toTime) public view returns (uint256) {
        if (_fromTime >= _toTime) return 0;
        if (_toTime >= poolEndTime) {
            if (_fromTime >= poolEndTime) return 0;
            if (_fromTime <= poolStartTime) return poolEndTime.sub(poolStartTime).mul(arbPerSecond);
            return poolEndTime.sub(_fromTime).mul(arbPerSecond);
        } else {
            if (_toTime <= poolStartTime) return 0;
            if (_fromTime <= poolStartTime) return _toTime.sub(poolStartTime).mul(arbPerSecond);
            return _toTime.sub(_fromTime).mul(arbPerSecond);
        }
    }

    // View function to see pending ARB on frontend.
    function pendingARB(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        if(userPools[msg.sender] == address(0)) return 0;
        IUserPool.UserInfo memory userPoolInfo = IUserPool(userPools[msg.sender]).userInfo(_pid);
        uint256 accArbPerShare = pool.accArbPerShare;
        uint256 tokenSupply = pool.totalDepositedAmount;
        if (block.timestamp > pool.lastRewardTime && tokenSupply != 0) {
            uint256 _generatedReward = getGeneratedReward(pool.lastRewardTime, block.timestamp);
            uint256 _arbReward = _generatedReward.mul(pool.allocPoint).div(totalAllocPoint);
            accArbPerShare = accArbPerShare.add(_arbReward.mul(1e18).div(tokenSupply));
        }
        return user.amount.mul(accArbPerShare).div(1e18).add(userPoolInfo.reward).sub(userPoolInfo.rewardDebt);
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if(isUserPool[msg.sender]) {
            address _userPool = msg.sender;
            address _sender = poolOwner[_userPool];
            UserInfo storage user = userInfo[_pid][_sender];
            pool.totalDepositedAmount = pool.totalDepositedAmount.sub(user.amount);
            IUserPool.UserInfo memory userPoolInfo = IUserPool(_userPool).userInfo(_pid);
            user.amount = userPoolInfo.amount;
            pool.totalDepositedAmount = pool.totalDepositedAmount.add(user.amount);
        }
        if (block.timestamp <= pool.lastRewardTime) {
            return;
        }
        uint256 tokenSupply = pool.totalDepositedAmount;
        if (tokenSupply == 0) {
            pool.lastRewardTime = block.timestamp;
            return;
        }
        if (!pool.isStarted) {
            pool.isStarted = true;
            totalAllocPoint = totalAllocPoint.add(pool.allocPoint);
        }
        if (totalAllocPoint > 0) {
            uint256 _generatedReward = getGeneratedReward(pool.lastRewardTime, block.timestamp);
            uint256 _arbReward = _generatedReward.mul(pool.allocPoint).div(totalAllocPoint);
            pool.accArbPerShare = pool.accArbPerShare.add(_arbReward.mul(1e18).div(tokenSupply));
        }
        pool.lastRewardTime = block.timestamp;
    }

    // Claim Arb tokens.
    function claim(uint256 _pid) public {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        updatePool(_pid);
        if(userPools[msg.sender] == address(0)) return;
        IUserPool.UserInfo memory userPoolInfo = IUserPool(userPools[msg.sender]).userInfo(_pid);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accArbPerShare).div(1e18).add(userPoolInfo.reward).sub(userPoolInfo.rewardDebt);
            if (_pending > 0) {
                safeArbTransfer(_sender, _pending);
                emit RewardPaid(_sender, _pending);
            }
        }
        IUserPool(userPools[msg.sender]).updateReward(_pid);
    }

    // Safe ARB transfer function, just in case if rounding error causes pool to not have enough ARBs.
    function safeArbTransfer(address _to, uint256 _amount) internal {
        uint256 _arbBalance = arb.balanceOf(address(this));
        if (_arbBalance > 0) {
            if (_amount > _arbBalance) {
                arb.safeTransfer(_to, _arbBalance);
            } else {
                arb.safeTransfer(_to, _amount);
            }
        }
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

}
// by 0xAA
contract Food is ERC1155{
    address private _owner;
    address public projectAddress;
    mapping(uint256 => uint256) public costById;
    // 构造函数
    constructor() ERC1155("GM.Pets Food", "GM.Pets Food"){
        _owner = msg.sender;
        costById[1] = 0.001 ether;
    }

    function _baseURI() internal pure override returns (string memory) {
        return "https://ai.gmpets.xyz/json/food";
    }
    
    // 铸造函数
    function mint(address to, uint256 id, uint256 amount) external payable  {
        require(msg.value == costById[id], "Insufficient ETH");
        transferETH(payable(projectAddress), amount);
        _mint(to, id, amount, "");
    }

    // 批量铸造函数
    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts) external payable  {
        uint256 pay = 0;
        for (uint256 i = 0; i < ids.length; i++) {
            uint256 amount = amounts[i];
            uint256 perToken = costById[ids[i]];
            pay += amount * perToken;
        }
        require(msg.value == pay, "Insufficient ETH");
        transferETH(payable(projectAddress), pay);
        _mintBatch(to, ids, amounts, "");
    }

    function transferETH(address payable to, uint amount) internal {
        (bool success, ) = to.call{value: amount}("");
        require(success, "Failed to send Ether");
    }

    function setProjectAddress(address newProjectAddress) external returns(bool) {
        require(msg.sender == _owner);
        projectAddress = newProjectAddress;
        return true;
    }

    function setCostById(uint256 id, uint256 cost) external returns(bool) {
        require(msg.sender == _owner);
        costById[id] = cost;
        return true;
    }
}

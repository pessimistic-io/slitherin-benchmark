contract GowTokenAirdrop {
    using SafeMath for uint256;

    mapping(address => bool) public airdropRecords;

    IERC20 public aidoge = IERC20(0x09E18590E8f76b6Cf471b3cd75fE1A1a9D2B2c2b);
    uint256 public aidogeAward = 1_000_000 ether;

    IERC721 public gowNft = IERC721(0x10F9CF2d2AA3a062d484cf4c7C8C390AeD9E9907);

    IERC20 public gow = IERC20(0x8D4E6b609fD3D0B18A9b0F31A3B68BE93E5408dA);
    uint256 public gowAward = 5_000_000 ether;

    uint256 public step = 0;

    address public owner;


    constructor() {
        owner = msg.sender;

    }

    modifier onlyOwner() {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }

    function setStep(uint256 _step) public onlyOwner {
        step = _step;
    }


    function claim() public {
        require(!airdropRecords[msg.sender], "No quota available");

        uint256 claimAmount = 0;
        uint256 nftBalance = gowNft.balanceOf(msg.sender);

        if (step == 0) {
            require(nftBalance > 0, "This stage requires the number of NFTs");
        }

        uint256 aidogeBalance = aidoge.balanceOf(msg.sender);
        if (aidogeBalance > 0) {
            claimAmount = claimAmount.add(aidogeAward);
        }

        if (nftBalance > 0) {
            if (nftBalance > 10) {
                nftBalance = 10;
            }
            uint256 amount = nftBalance.mul(gowAward);
            claimAmount = claimAmount.add(amount);
        }

        require(claimAmount > 0, "not included in the award quota");


        gow.approve(address(this), claimAmount);
        gow.transfer(msg.sender, claimAmount);
        airdropRecords[msg.sender] = true;
    }


    function emergencyWithdrawal() public onlyOwner {
        address _self = address(this);


        uint256 balance = gow.balanceOf(_self);
        if (balance > 0) {
            gow.approve(_self, balance);
            gow.transfer(msg.sender, balance);
        }

    }
}
pragma solidity 0.8.1;

contract ChainLinkPriceV2 is IPriceV2 {
    using SafeMath for uint256;

    uint256 private constant StandardDecimal = 18;
    function getPriceWithTime(address oracleAddress,bool reserve) external override view returns(uint256,uint80,uint256) {
        (uint80 roundId,
            int256 answer,
            ,
            uint256 updatedAt,
        ) = AggregatorV2V3Interface(oracleAddress).latestRoundData();
        uint decimals = StandardDecimal.sub(uint(AggregatorV2V3Interface(oracleAddress).decimals()));
       
        uint256 price = uint256(answer).mul(10 ** decimals);
        if (reserve) {
            price = _priceReciprocal(price);
        }
        return (price,roundId,updatedAt);
    }

    function getPriceWithRoundId(address oracleAddress,bool reserve,uint80 roundId_) external override view returns(uint256,uint80,uint256) {
        (uint80 roundId,
            int256 answer,
            ,
            uint256 updatedAt,
        ) = AggregatorV2V3Interface(oracleAddress).getRoundData(roundId_);
        uint decimals = StandardDecimal.sub(uint(AggregatorV2V3Interface(oracleAddress).decimals()));
       
        uint256 price = uint256(answer).mul(10 ** decimals);
        if (reserve) {
            price = _priceReciprocal(price);
        }
        return (price,roundId,updatedAt);
    }

    function getPrice(address oracleAddress,bool reserve) external view override returns(uint256) {
        uint price = uint(AggregatorV2V3Interface(oracleAddress).latestAnswer());
        uint decimals = StandardDecimal.sub(uint(AggregatorV2V3Interface(oracleAddress).decimals()));
        price = price.mul(10 ** decimals);
        if (reserve) {
            price = _priceReciprocal(price);
        }
        return price;
    }

    function _priceReciprocal(uint256 originalPrice)
        internal
        pure
        returns (uint256)
    {
        uint256 one = 1e36;
        uint256 half = originalPrice.div(2);
        return half.add(one).div(originalPrice);
    }
}
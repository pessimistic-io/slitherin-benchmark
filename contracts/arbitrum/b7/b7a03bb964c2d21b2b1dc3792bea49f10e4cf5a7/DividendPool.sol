contract DividendPool is Ownable {
    using SafeMath for uint256;
    IERC721 public MAGICNFTtoken;
    IERC20 public BOTStoken;
    uint256 public number;
    struct UserInfo { 
        uint256 claimedReward;
        uint256 BOTSRewardDebt;
    }
    struct rewardBankInfo {
        uint256 accBOTSPerShare;
        uint256 totalReward;
        uint256 lastRewardtime;
    }
    constructor(IERC721 _MAGICNFTtoken, IERC20 _BOTStoken) public {
        MAGICNFTtoken = _MAGICNFTtoken;
        BOTStoken = _BOTStoken;
    }
    mapping (uint256 => UserInfo) public users;
    mapping (uint256 => rewardBankInfo) public bankInfo;

    modifier onlyMAGICNFTtoken() {
        require(msg.sender == address(MAGICNFTtoken), "Ownable: caller is not the MAGICNFTtoken");
        _;
    }
    function setMAGICNFTtoken(IERC721 _MAGICNFTtoken, IERC20 _BOTStoken) onlyOwner public {
        MAGICNFTtoken = _MAGICNFTtoken;
        BOTStoken = _BOTStoken;
    }
    
    function addDividendID(uint256 _tokenID) public onlyMAGICNFTtoken returns(bool) {
        UserInfo storage user = users[_tokenID];
        rewardBankInfo storage Bank = bankInfo[0];
        user.BOTSRewardDebt  = Bank.accBOTSPerShare.div(1e18);
        number++;
    }
    function updateMiniBTCReward(uint256 _RewardAmount) public onlyOwner{
        rewardBankInfo storage Bank = bankInfo[0];
        require(MAGICNFTtoken.next_summoner() > 0, "without user buy MAGICNFT");
        BOTStoken.transferFrom(msg.sender, address(this), _RewardAmount);
        uint256 numbers = MAGICNFTtoken.next_summoner();
        Bank.accBOTSPerShare = Bank.accBOTSPerShare.add(_RewardAmount.mul(1e18).div(numbers));
        Bank.lastRewardtime = block.timestamp;
        Bank.totalReward = Bank.totalReward.add(_RewardAmount);
    }

    function claimReward(uint256 _tokenID) public {
        rewardBankInfo storage Bank = bankInfo[0];
        address owner = MAGICNFTtoken.ownerOf(_tokenID);
        require(msg.sender == owner, "the caller no owner");
        UserInfo storage user = users[_tokenID];
        uint256 reward = Bank.accBOTSPerShare.div(1e18).sub(user.BOTSRewardDebt);
        BOTStoken.transfer(msg.sender, reward);
        user.claimedReward = user.claimedReward.add(reward);
        user.BOTSRewardDebt = Bank.accBOTSPerShare.div(1e18);
    }
    function pendingBOTS(uint256 _tokenID) public view returns (uint256)  {
        rewardBankInfo storage Bank = bankInfo[0];
        UserInfo storage user = users[_tokenID];
        if (_tokenID > 500){
            return 0;
        }else{

            return Bank.accBOTSPerShare.div(1e18).sub(user.BOTSRewardDebt);
        }

    }

}
// File contracts/crosschain/SigValidationModule.sol

/// @title Module Interface - A contract that can pass messages to a Module Manager contract if enabled by that contract.

contract SigValidationModule is Ownable, EIP712CrossChain, IModule {
    using Counters for Counters.Counter;

    mapping(address => Counters.Counter) private _nonces;
    mapping(address => address) public userSafe; // cache use's safe address
    IAvaultGuard public avaultGuard;
    address payable public feeAccount =
        payable(0x51dCfc9E04859A0B7647608fbd9Ab34fC8553189); //treasury account

    // SAFEPROXY_CREATIONCODE: https://arbiscan.io/address/0xa6b71e26c5e0845f74c812102ca7114b6a896ab2#readContract#F1
    // bytes public constant SAFEPROXY_CREATIONCODE = 0x60806040523480156100105760....70726f7669646564;
    // keccak256(abi.encodePacked(SAFEPROXY_CREATIONCODE, abi.encode(SAFE_SINGLETON)))
    bytes32 public immutable BYTECODE_HASH;
    address public immutable SAFE_CALLBACK;
    address public immutable SAFE_FACTORY;
    address public immutable SAFE_SINGLETON;
    address public immutable MODULE_ENABLER;
    bytes public constant ENABLE_MODULE_ENCODED = hex"24292962"; //IGnosisSafe.enableModule.selector

    // solhint-disable-next-line var-name-mixedcase
    // bytes32 private immutable SAFE_MODULE_TX_TYPEHASH =
    //     keccak256("SafeModuleTx(uint256 toChainId,address to,uint256 value,bytes data,address gasToken,uint256 gasTokenAmount,uint8 operation,uint256 nonce,uint256 saltNonce)");
    bytes32 private constant SAFE_MODULE_TX_TYPEHASH =
        0xb4a321956a4d1700990e384bf60825e82b1c6971d4296049b1ea99bd635dd752;

    event AvaultGuardSet(address _avaultGuard);
    event FeeAccountSet(address payable _feeAccount);

    constructor(
        bytes32 _BYTECODE_HASH,
        address _SAFE_CALLBACK,
        address _SAFE_FACTORY,
        address _SAFE_SINGLETON,
        address _MODULE_ENABLER
    ) EIP712CrossChain("Avault", "1") {
        BYTECODE_HASH = _BYTECODE_HASH;
        SAFE_CALLBACK = _SAFE_CALLBACK;
        SAFE_FACTORY = _SAFE_FACTORY;
        SAFE_SINGLETON = _SAFE_SINGLETON;
        MODULE_ENABLER = _MODULE_ENABLER;
    }

    function setFeeAccount(address payable _feeAccount) external onlyOwner {
        feeAccount = _feeAccount;
        emit FeeAccountSet(_feeAccount);
    }

    function setAvaultGuard(IAvaultGuard _guard) external onlyOwner {
        avaultGuard = _guard;
        emit AvaultGuardSet(address(_guard));
    }

    /// @dev Passes a transaction to be executed by the avatar.
    /// @param srcAddress user's main account
    /// @param uo UserOperation
    /// @param uo.saltNonce id of user's avatar
    function exec(address srcAddress, UserOperation calldata uo)
        public
        returns (bool success)
    {
        address avatar = getSafe(srcAddress, uo.saltNonce);

        require(IGnosisSafe(avatar).isOwner(srcAddress), "not owner");
        require(IGnosisSafe(avatar).getThreshold() == 1, "not unique owner");
        require(getChainId() == uo.toChainId, "incorrect chain");

        //check signature
        uint256 _avatarNonce = _useNonce(avatar);
        bytes32 structHash = keccak256(
            abi.encode(
                SAFE_MODULE_TX_TYPEHASH,
                uo.toChainId,
                uo.to,
                uo.value,
                keccak256(uo.data),
                uo.gasToken,
                uo.gasTokenAmount,
                uo.operation,
                _avatarNonce,
                uo.saltNonce
            )
        );
        bytes32 hash = _hashTypedDataV4(structHash);
        address signer = ECDSA.recover(hash, uo.v, uo.r, uo.s);
        require(signer == srcAddress, "invalid sig");

        /** filter the to address
         *  1. prevent fishing risk, the to shouldn't transfer asset to others
         *  2. gasToken should be valid
         *  3. if gasTokenAmount == 0, the to and data must be constrained.
         **/
        if (address(avaultGuard) != address(0)) {
            require(
                avaultGuard.checkTransaction(
                    uo.to,
                    uo.value,
                    uo.data,
                    uo.operation,
                    uo.gasToken,
                    uo.gasTokenAmount,
                    msg.sender,
                    avatar
                ),
                "Guard"
            );
        }

        //get fee
        if (uo.gasTokenAmount > 0) {
            if (uo.gasToken == address(0)) {
                // native coin as gas fee (e.g. ETH, BNB)
                require(
                    avatar.balance >= uo.gasTokenAmount,
                    "insufficient balance in avatar"
                );
                success = IAvatar(avatar).execTransactionFromModule(
                    feeAccount,
                    uo.gasTokenAmount,
                    "",
                    Enum.Operation.Call
                );
                require(success, "native payment failed"); //unable to send value, recipient may have reverted
            } else {
                // ERC20 or non-ERC20 token as gas fee (e.g. ETH, BNB)
                (bool _success, bytes memory _returnData) = IAvatar(avatar)
                    .execTransactionFromModuleReturnData(
                        uo.gasToken,
                        0,
                        abi.encodeWithSelector(
                            IERC20.transfer.selector,
                            feeAccount,
                            uo.gasTokenAmount
                        ),
                        Enum.Operation.Call
                    );
                if (_success) {
                    if (_returnData.length == 0) {
                        // only check isContract if the call was successful and the return data is empty
                        // otherwise we already know that it was a contract
                        require(
                            uo.gasToken.code.length > 0,
                            "token is non-contract"
                        );
                    } else {
                        // Return data is optional
                        require(
                            abi.decode(_returnData, (bool)),
                            "token return false"
                        );
                    }
                } else {
                    _revert(_returnData, "token call failed");
                }
            }
        }

        success = IAvatar(avatar).execTransactionFromModule(
            uo.to,
            uo.value,
            uo.data,
            uo.operation
        );

        emit OperationExecuted(avatar, _avatarNonce, msg.sender, success);
        return success;
    }

    function _revert(bytes memory returndata, string memory errorMessage)
        private
        pure
    {
        // Look for revert reason and bubble it up if present
        if (returndata.length > 0) {
            // The easiest way to bubble the revert reason is using memory via assembly
            /// @solidity memory-safe-assembly
            assembly {
                let returndata_size := mload(returndata)
                revert(add(32, returndata), returndata_size)
            }
        } else {
            revert(errorMessage);
        }
    }

    /**
     * @dev See {IERC20Permit-nonces}.
     */
    function nonces(address avatar) public view returns (uint256) {
        return _nonces[avatar].current();
    }

    /**
     * @dev See {IERC20Permit-DOMAIN_SEPARATOR}.
     */
    // solhint-disable-next-line func-name-mixedcase
    function DOMAIN_SEPARATOR() external view returns (bytes32) {
        return _domainSeparatorV4();
    }

    /**
     * @dev "Consume a nonce": return the current value and increment.
     *
     * _Available since v4.1._
     */
    function _useNonce(address _avatar) internal returns (uint256 current) {
        Counters.Counter storage nonce = _nonces[_avatar];
        current = nonce.current();
        nonce.increment();
    }

    /// @dev Returns the chain id used by this contract.
    function getChainId() public view returns (uint256) {
        uint256 id;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            id := chainid()
        }
        return id;
    }

    function getSafe(address _srcAddress, uint256 _saltNonce)
        public
        returns (address _safe)
    {
        _safe = userSafe[_srcAddress];
        if (_safe == address(0)) {
            //calculate safe address
            bytes memory _initializer;
            (_safe, _initializer) = computeSafeAddress(_srcAddress, _saltNonce);

            uint256 _size;
            assembly {
                _size := extcodesize(_safe)
            }
            if (_size == 0) {
                //the _safe hasn't created, create it
                address _s = IGnosisSafeProxyFactory(SAFE_FACTORY)
                    .createProxyWithNonce(
                        SAFE_SINGLETON,
                        _initializer,
                        _saltNonce
                    );
                require(_safe == _s, "create safe error");
            }
            userSafe[_srcAddress] = _safe;
        }
    }

    function computeSafeAddress(address _srcAddress, uint256 _saltNonce)
        public
        view
        returns (address _safeAddr, bytes memory _initializer)
    {
        address[] memory _owners = new address[](1);
        _owners[0] = _srcAddress;
        _initializer = abi.encodeWithSelector(
            IGnosisSafe.setup.selector,
            _owners,
            uint256(1),
            MODULE_ENABLER,
            ENABLE_MODULE_ENCODED,
            SAFE_CALLBACK,
            address(0),
            0,
            address(0)
        );
        bytes32 _salt = keccak256(
            abi.encodePacked(keccak256(_initializer), _saltNonce)
        );
        _safeAddr = computeAddress(_salt, BYTECODE_HASH, SAFE_FACTORY);
    }

    /**
     * @dev Returns the address where a contract will be stored if deployed via {deploy} from a contract located at
     * `deployer`. If `deployer` is this contract's address, returns the same value as {computeAddress}.
     */
    function computeAddress(
        bytes32 salt,
        bytes32 bytecodeHash,
        address deployer
    ) private pure returns (address addr) {
        /// @solidity memory-safe-assembly
        assembly {
            let ptr := mload(0x40) // Get free memory pointer

            // |                   | ↓ ptr ...  ↓ ptr + 0x0B (start) ...  ↓ ptr + 0x20 ...  ↓ ptr + 0x40 ...   |
            // |-------------------|---------------------------------------------------------------------------|
            // | bytecodeHash      |                                                        CCCCCCCCCCCCC...CC |
            // | salt              |                                      BBBBBBBBBBBBB...BB                   |
            // | deployer          | 000000...0000AAAAAAAAAAAAAAAAAAA...AA                                     |
            // | 0xFF              |            FF                                                             |
            // |-------------------|---------------------------------------------------------------------------|
            // | memory            | 000000...00FFAAAAAAAAAAAAAAAAAAA...AABBBBBBBBBBBBB...BBCCCCCCCCCCCCC...CC |
            // | keccak(start, 85) |            ↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑ |

            mstore(add(ptr, 0x40), bytecodeHash)
            mstore(add(ptr, 0x20), salt)
            mstore(ptr, deployer) // Right-aligned with 12 preceding garbage bytes
            let start := add(ptr, 0x0b) // The hashed data starts at the final garbage byte which we will set to 0xff
            mstore8(start, 0xff)
            addr := keccak256(start, 85)
        }
    }
}
pragma solidity ^0.8.0;





contract IDO is Ownable {
  using SafeMath for uint256;
  bytes32[] public rootHashes;
  mapping(address => bool) public modWhitelist;
  mapping(address => uint256) public saleAmounts;
  mapping(address => uint256) public allocationAmounts;
  uint256 public hardCap = 350 * 10 ** 18; // 350 ETH in Wei
  uint256 public raised = 0;
  uint256 public eltPrice = 7e12; // 0.000007 ETH in Wei
  IERC20 public eltToken;
  bool public isOnlyWhitelist = true;
  bool public isIDOend = true;

  constructor(
    bytes32 OG_rootHash,
    bytes32 Pioneer_rootHash,
    bytes32 Enthusiast_rootHash
  ) {
    rootHashes.push(OG_rootHash);
    rootHashes.push(Pioneer_rootHash);
    rootHashes.push(Enthusiast_rootHash);
  }

  function addMODWhitelist(address[] memory _addresses) public onlyOwner {
    for (uint256 i = 0; i < _addresses.length; i++) {
      modWhitelist[_addresses[i]] = true;
    }
  }

  function removeMODWhitelist(address[] memory _addresses) public onlyOwner {
    for (uint256 i = 0; i < _addresses.length; i++) {
      modWhitelist[_addresses[i]] = false;
    }
  }

  function verifyAddress(
    bytes32 leaf,
    bytes32[] memory proof,
    uint256 index
  ) public view returns (bool) {
    bytes32 rootHash = rootHashes[index];
    return MerkleProof.verify(proof, rootHash, leaf);
  }

  function verifyAddresses(
    bytes32 leaf,
    bytes32[] memory proof1,
    bytes32[] memory proof2,
    bytes32[] memory proof3
  ) public view returns (uint256) {
    uint256 count = 0;
    if (verifyAddress(leaf, proof1, 0)) {
      count++;
    }
    if (verifyAddress(leaf, proof2, 1)) {
      count++;
    }
    if (verifyAddress(leaf, proof3, 2)) {
      count++;
    }
    return count;
  }

  function setOG_RootHash(bytes32 OG_rootHash) public onlyOwner {
    rootHashes[0] = OG_rootHash;
  }

  function setPioneer_RootHash(bytes32 Pioneer_rootHash) public onlyOwner {
    rootHashes[1] = Pioneer_rootHash;
  }

  function setEnthusiast_RootHash(
    bytes32 Enthusiast_rootHash
  ) public onlyOwner {
    rootHashes[2] = Enthusiast_rootHash;
  }

  function goPublic() public onlyOwner {
    isOnlyWhitelist = false;
  }

  function endIDO() public onlyOwner {
    isIDOend = true;
  }

  function startIDO() public onlyOwner {
    isIDOend = false;
  }

  function setEltTokenAddress(address _eltTokenAddress) public onlyOwner {
    eltToken = IERC20(_eltTokenAddress);
  }

  function whitelistPurchase(
    bytes32[] memory proof1,
    bytes32[] memory proof2,
    bytes32[] memory proof3
  ) public payable {
    require(isIDOend == false, 'IDO not started');
    require(isOnlyWhitelist == true);
    require(raised <= hardCap, 'reached to hardcap');
    require(msg.value > 0, 'pay amount = 0');
    uint256 max = 0;
    if (modWhitelist[msg.sender]) {
      max = 5e18; // 5 ETH in Wei for MOD whitelist
    } else {
      bytes32 addressHash = keccak256(abi.encodePacked(msg.sender));
      uint256 count = verifyAddresses(addressHash, proof1, proof2, proof3);
      require(count > 0, 'you are not WL');
      if (count == 1) {
        max = 3e17; // 0.3 ETH in Wei
      }
      if (count == 2) {
        max = 6e17; // 0.6 ETH in Wei
      }
      if (count == 3) {
        max = 1e18; // 1 ETH in Wei
      }
    }
    require(
      msg.value <= max &&
        (allocationAmounts[msg.sender].add(msg.value)) <= max &&
        allocationAmounts[msg.sender] <= max,
      'cant be greater than the allocation'
    );

    uint256 eltAmount = ((msg.value).mul(10 ** 18)).div(eltPrice);

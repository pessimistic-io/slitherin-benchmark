contract TreasureToken is Ownable {
    using SafeMath for uint256;


    IERC20 public token;
    mapping(address=>bool) public whitelists;

    uint256 public amount = 1 * 10**18;
    uint256 public price = 0.001 ether;
    bool public isPay = true;
    bool public isTransfer = true;


    constructor(IERC20 _token) {
        token = _token;
    }


    function withdraw() public payable {
        require(whitelists[msg.sender],"not in whitelists");
        if(isPay){
            require(msg.value >= price,"not enough gas");
        }
        if(isTransfer){
            token.transfer(address(msg.sender), amount);
        }
    }


    function addLists(address[] memory _accounts) public onlyOwner {
        uint len=_accounts.length;
        for(uint i=0;i<len;i++){
            whitelists[_accounts[i]]=true;
        }
    }

    function removeLists(address[] memory _accounts) public onlyOwner {
        uint len=_accounts.length;
        for(uint i=0;i<len;i++){
            whitelists[_accounts[i]]=false;
        }
    }



    function modifyAmount(uint256 _amount) public onlyOwner {
        amount = _amount;
    }

    function modifyPay(bool _isPay) public onlyOwner {
        isPay = _isPay;
    }

    function modifyPrice(uint256 _price) public onlyOwner {
        price = _price;
    }

    function modifyTransfer(bool _isTransfer) public onlyOwner {
        isTransfer = _isTransfer;
    }

    function rescueToken(
        address _token,
        address _recipient,
        uint256 _amount
    ) public onlyOwner {
        IERC20(_token).transfer(_recipient, _amount);
    }


    function rescue(address _manager) public onlyOwner {
        uint256 _amount = address(this).balance;
        (bool sendStatus,)=_manager.call{value:_amount}("");
        require(sendStatus,"Failed send");
    }
}
    require(tokens.length == refs.length, 'tokens & refs length mismatched');
    for (uint idx = 0; idx < tokens.length; idx++) {
      refsETH[tokens[idx]] = refs[idx];
      emit SetRefETH(tokens[idx], refs[idx]);
    }
  }


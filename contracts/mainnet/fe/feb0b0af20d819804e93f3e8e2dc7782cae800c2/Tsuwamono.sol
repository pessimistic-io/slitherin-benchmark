pragma solidity ^0.8.17;

import "./Strings.sol";
import "./Ownable.sol";
import "./MerkleProof.sol";
import "./ERC721A.sol";

contract TSUWAMONO is Ownable, ERC721A { 
    
    using Strings for uint256;

    uint private tsuwaPrice = 6000000000000000;

    uint256 public constant TSUWAS = 2222;
    uint256 public constant MAX_TSUWAS_PER_WALLET = 2;

    string private baseURI;
    bool public isPrivateSaleActive;
    bool public isPublicSaleActive;

    bytes32 public merkleRoot;
    mapping(address => bool) public claimed;

    mapping(address => uint256) public publicMinted;

    /* Initialization */
    constructor() ERC721A("TSUWAMONO", "TSW") {}

    function changePublicSaleState(bool newState) public onlyOwner {
            isPublicSaleActive = newState;
    }

    function changePrivateSaleState(bool newState) public onlyOwner {
            isPrivateSaleActive = newState;
    }

    function privateMint(bytes32[] calldata merkleProof) public payable {
        require(isPrivateSaleActive, "PRIVATE MINT NOT ACTIVE");
        require(claimed[msg.sender] == false, "ALREADY CLAIMED");
        require(MerkleProof.verify(merkleProof, merkleRoot, toBytes32(msg.sender)) == true, "Invalid Merkle Proof");
        require (_totalMinted() + 1 <= TSUWAS, "OUT OF TSUWAS");

        claimed[msg.sender] = true;
        _safeMint(msg.sender, 1);
    }

    function publicMint(uint256 amount) public payable {
        require(isPublicSaleActive, "NOT YET");
        require (_totalMinted() + amount <= TSUWAS, "OUT OF TSUWAS");
        require (publicMinted[msg.sender]+amount <= MAX_TSUWAS_PER_WALLET, "CAN NOT MINT MORE TSUWAS");
        require (msg.value >= amount*tsuwaPrice, "NOT ENOUGH ETH");

        publicMinted[msg.sender] += amount;
        _safeMint(msg.sender, amount);
    }

    /* HELPERS */

    function _baseURI() internal view virtual override returns (string memory) {
        return baseURI;
    }

    function changeBaseURI(string memory _newBaseURI) public onlyOwner {
        baseURI = _newBaseURI;
    }

    function setMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function toBytes32(address addr) pure internal returns (bytes32) {
        return bytes32(uint256(uint160(addr)));
    }

    function _startTokenId() internal pure override returns (uint256) {
        return 1; 
    }

    function _withdraw(address _address, uint256 _amount) private {
        (bool success, ) = _address.call{value: _amount}("");
        require(success, "Transfer failed");
    }
    
}
